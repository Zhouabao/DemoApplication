<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.demoapplication">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/> <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-feature
            android:name="android.hardware.camera"
            android:required="false"/> <!-- 地图SDK（包含其搜索功能）需要的基础权限 -->
    <!-- 允许程序设置内置sd卡的写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/> <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/> <!-- 允许程序读写手机状态和身份 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/> <!-- 允许程序访问CellID或WiFi热点来获取粗略的位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> <!-- 用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/> <!-- 用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/> <!-- 用于申请调用A-GPS模块 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/> <!-- 用于申请获取蓝牙信息进行室内定位 -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
            android:name=".common.MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/MyAppTheme"
            tools:replace="android:name,android:theme,android:icon">
        <activity android:name=".ui.activity.MyJobActivity">
        </activity>
        <activity android:name=".ui.activity.NickNameActivity">
        </activity>
        <activity android:name=".ui.activity.UserInfoSettingsActivity">
        </activity>
        <activity android:name=".ui.activity.MyCommentActivity">
        </activity>
        <activity android:name=".ui.activity.MyVisitActivity">
        </activity>
        <activity android:name=".ui.activity.MyCollectionEtcActivity">
        </activity>
        <activity android:name=".ui.activity.MyQuestionActivity">
        </activity>
        <activity android:name=".ui.activity.SettingsActivity">
        </activity>
        <activity android:name=".ui.activity.UserCenterActivity">
        </activity>
        <activity android:name=".ui.activity.LocationActivity">
        </activity>
        <activity android:name=".ui.activity.BigImageActivity">
        </activity>
        <activity
                android:name=".ui.activity.PublishActivity"
                android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity android:name=".ui.activity.PublishChooseLabelsActivity"/>
        <activity
                android:name=".ui.activity.SquarePlayListDetailActivity"
                android:theme="@style/BlackTheme"
                android:windowSoftInputMode="adjustPan"/>
        <activity
                android:name=".ui.activity.SquarePlayDetailActivity"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.AppCompat.Transitions"
                android:windowSoftInputMode="adjustPan"/>
        <activity
                android:name=".ui.activity.SquareCommentDetailActivity"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.AppCompat.Transitions"/>
        <activity
                android:name=".ui.chat.MatchSucceedActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".ui.activity.MatchDetailActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".ui.activity.UserBirthActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".ui.activity.LabelsActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".ui.activity.SetInfoActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".ui.activity.VerifyCodeActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".ui.activity.LoginActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".ui.activity.WelcomeActivity"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.activity.MainActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.AppCompat.Transitions">
        </activity>

        <meta-data
                android:name="design_width_in_dp"
                android:value="375"/>
        <meta-data
                android:name="design_height_in_dp"
                android:value="667"/>
        <meta-data
                android:name="com.amap.api.v2.apikey"
                android:value="ed0911965c16cc04ec36bb2360dccaa2"/>

        <service android:name="com.amap.api.location.APSService"/>
    </application>

</manifest>