<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundTopImageView">
        <attr name="topRadius" format="dimension"/>
    </declare-styleable>

    <!--验证码框-->
    <declare-styleable name="VerificationView">
        <attr name="vTextSize" format="dimension"/>
        <attr name="vIsTextBold" format="boolean"/>
        <attr name="vTextCount" format="integer"/>
        <attr name="vTextColor" format="color"/>
        <attr name="vBackgroundResource" format="reference"/>
        <attr name="vCursorDrawable" format="reference"/>
        <attr name="vBackgroundColor" format="color"/>
        <attr name="vAutoShowInputBoard" format="boolean"/>
    </declare-styleable>

    <!--频谱-->
    <declare-styleable name="voisePlayingIconAttr">
        <attr name="pointer_color" format="color"/>
        <attr name="pointer_num" format="integer"/>
        <attr name="pointer_width" format="float"/>
        <attr name="pointer_speed" format="integer"/>
    </declare-styleable>


    <!--滑动的recyclerview-->
    <declare-styleable name="StackCardsView">
        <attr name="maxVisibleCnt" format="integer"/>
        <attr name="edgeHeight" format="dimension"/>
        <attr name="scaleFactor" format="float"/>
        <attr name="alphaFactor" format="float"/>
        <attr name="dismissFactor" format="float"/>
        <attr name="dismissAlpha" format="float"/>
        <attr name="dragSensitivity" format="float"/>
        <attr name="itemWidth" format="dimension"/>
        <attr name="itemHeight" format="dimension"/>
    </declare-styleable>


    <!--view bahavior-->
    <declare-styleable name="SimpleViewBehavior">
        <attr name="svb_dependOn" format="reference"/>
        <attr name="svb_dependType">
            <enum name="height" value="0"/>
            <enum name="width" value="1"/>
            <enum name="x" value="2"/>
            <enum name="y" value="3"/>
        </attr>
        <attr name="svb_dependTargetX" format="reference|dimension"/>
        <attr name="svb_dependTargetY" format="reference|dimension"/>
        <attr name="svb_dependTargetWidth" format="reference|dimension"/>
        <attr name="svb_dependTargetHeight" format="reference|dimension"/>
        <attr name="svb_targetX" format="reference|dimension"/>
        <attr name="svb_targetY" format="reference|dimension"/>
        <attr name="svb_targetWidth" format="reference|dimension"/>
        <attr name="svb_targetHeight" format="reference|dimension"/>
        <attr name="svb_targetBackgroundColor" format="reference|color"/>
        <attr name="svb_targetAlpha" format="float"/>
        <attr name="svb_targetRotateX" format="float"/>
        <attr name="svb_targetRotateY" format="float"/>
        <attr name="svb_animation" format="reference"/>
    </declare-styleable>


    <!--侧边字母导航栏-->
    <declare-styleable name="WaveSideBarView">
        <attr name="sidebar_lazy_respond" format="boolean"/>
        <attr name="sidebar_text_color" format="color"/>
        <attr name="sidebar_max_offset" format="dimension"/>
        <attr name="sidebar_position" format="enum">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="sidebar_text_alignment" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>

    <!--自定义搜索框-->
    <declare-styleable name="SearchEditText">
        <attr name="drawableDel" format="reference"/>
    </declare-styleable>

    <!--水波纹外扩效果-->
    <declare-styleable name="WaterRippleView">
        <attr name="rippleSpacing" format="dimension|reference"/>
        <attr name="rippleCount" format="integer|reference"/>
        <attr name="rippleColor" format="color|reference"/>
        <attr name="rippleCenterIcon" format="reference"/>
        <attr name="rippleAutoRunning" format="boolean"/>
    </declare-styleable>

    <!--水波纹外扩效果-->
    <declare-styleable name="MsgTimerProgress">
        <attr name="timerWidth" format="integer|reference"/>
        <attr name="bitmapWidth" format="integer|reference"/>
    </declare-styleable>
</resources>