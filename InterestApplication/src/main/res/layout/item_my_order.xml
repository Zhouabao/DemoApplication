<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/orderImg"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="豆炎"
        android:textColor="#ff191919"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/orderContent"
        app:layout_constraintLeft_toRightOf="@id/orderImg"
        app:layout_constraintTop_toTopOf="@id/orderImg" />

    <TextView
        android:id="@+id/orderCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="她是你的好友"
        android:textColor="#ff888d92"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/orderImg"
        app:layout_constraintLeft_toLeftOf="@id/orderContent"
        app:layout_constraintTop_toBottomOf="@id/orderContent" />

    <TextView
        android:id="@+id/orderState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_rectangle_orange_12dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp"
        android:text="确认收货"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/orderImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/orderImg" />


    <View
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderCost"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/orderContent"
        android:background="@color/colorDivider"
        android:layout_width="0dp"
        android:layout_height="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>