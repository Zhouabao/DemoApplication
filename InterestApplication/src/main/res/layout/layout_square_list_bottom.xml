<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:descendantFocusability="afterDescendants"
        android:layout_height="wrap_content">

    <com.ctetin.expandabletextviewlibrary.ExpandableTextView
            android:id="@+id/squareContent1"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:textColor="@color/colorBlack"
            android:alpha="0.8"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.4"
            android:textStyle="bold"
            app:ep_contract_color="@color/colorGrayText"
            app:ep_contract_text="收起"
            app:ep_expand_color="@color/colorGrayText"
            app:ep_expand_text="...展开"
            app:ep_max_line="3"
            app:ep_need_always_showright="true"
            app:ep_need_animation="true"
            app:ep_need_contract="true"
            app:ep_need_expand="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品在蚂蚁金服中后台产品"/>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/squareTime"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="20dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/squareContent1"
            app:layout_constraintRight_toLeftOf="@id/squareDianzanBtn1"
            app:layout_constraintTop_toBottomOf="@id/squareContent1"
            />

    <TextView
            android:id="@+id/squareDianzanBtn1"
            android:drawableLeft="@drawable/icon_dianzan"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:drawablePadding="8dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorBlack6f"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="18dp"
            app:layout_constraintBottom_toBottomOf="@id/squareTime"
            app:layout_constraintRight_toLeftOf="@id/squareCommentBtn1"
            app:layout_constraintTop_toTopOf="@id/squareTime"
            tools:text="123"/>


    <TextView
            android:id="@+id/squareCommentBtn1"
            android:drawableLeft="@drawable/icon_comment"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:drawablePadding="8dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorBlack6f"
            android:textSize="15sp"
            android:layout_marginRight="18dp"
            app:layout_constraintBottom_toBottomOf="@id/squareTime"
            app:layout_constraintRight_toLeftOf="@id/squareMoreBtn1"
            app:layout_constraintTop_toTopOf="@id/squareTime"
            tools:text="123"/>


    <TextView
            android:id="@+id/squareZhuanfaBtn1"
            android:visibility="gone"
            android:drawableLeft="@drawable/icon_zhuanfa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack6f"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="@id/squareDianzanBtn1"
            app:layout_constraintStart_toEndOf="@id/squareCommentBtn1"
            app:layout_constraintTop_toTopOf="@id/squareDianzanBtn1"
            tools:text="123"/>


    <ImageView
            android:id="@+id/squareMoreBtn1"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_more_black"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toBottomOf="@id/squareDianzanBtn1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/squareDianzanBtn1"/>

</androidx.constraintlayout.widget.ConstraintLayout>