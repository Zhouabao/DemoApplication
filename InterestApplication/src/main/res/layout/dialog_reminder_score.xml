<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/llRoot"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/transparent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_marginTop="72dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="26dp">

        <TextView
                android:id="@+id/score20"
                android:visibility="gone"
                android:layout_marginLeft="70dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_information_finish"
                android:background="@drawable/shape_rectangle_orange_white_9dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                android:layout_height="18dp"
                tools:text="20%">
        </TextView>


        <TextView
                android:id="@+id/score80"
                android:drawableLeft="@drawable/icon_xiaolian"
                android:background="@drawable/shape_rectangle_orange_11dp"
                android:layout_marginRight="90dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:paddingLeft="4dp"
                tools:text="80"
                android:paddingRight="4dp"
                android:gravity="center"
                android:textStyle="bold"
                android:drawablePadding="2dp"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="22dp"/>
    </RelativeLayout>

    <ImageView
            android:id="@+id/reminderArrow"
            android:layout_marginTop="3dp"
            android:src="@drawable/icon_dialog_arrow_up"
            android:layout_width="12dp"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/reminderContent"
            android:background="@drawable/rectangle_white_5dp"
            android:padding="7dp"
            android:lineSpacingMultiplier="1.1"
            android:text="积糖送你每天20次免费右滑奥\n快去使用开始交友吧"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>