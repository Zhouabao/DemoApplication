<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.activity.SquareDetailActivity">

    <ImageView
            android:id="@+id/btnBack"
            android:src="@drawable/icon_return"
            android:layout_marginLeft="10dp"
            android:layout_width="24dp"
            android:layout_height="56dp"
            android:scaleType="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="动态详情"
            android:textColor="@color/colorBlackTitle"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintLeft_toRightOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack"/>

    <View
            android:background="@color/colorLightGray"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnBack">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/squareUserIv"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/img_avatar_01"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:id="@+id/detailPlayUserVipIv"
                    android:layout_marginLeft="42dp"
                    android:src="@drawable/icon_vip"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/squareUserIv"/>

            <TextView
                    android:id="@+id/detailPlayUserName"
                    android:layout_marginLeft="9dp"
                    android:layout_width="115dp"
                    android:layout_height="22dp"
                    android:text="Kimberly Davis"
                    android:textColor="@color/colorBlack22"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/detailPlayUserVipIv"
                    app:layout_constraintTop_toTopOf="@id/squareUserIv"
                    />

            <TextView
                    android:id="@+id/detailPlayUserLocationAndTime"
                    android:layout_width="100dp"
                    android:layout_height="17dp"
                    android:text="北京市 10小时前"
                    android:textColor="@color/colorBlack99"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/detailPlayUserName"
                    app:layout_constraintTop_toBottomOf="@id/detailPlayUserName"
                    />

            <TextView
                    android:id="@+id/btnChat"
                    android:text="聊天"
                    android:textColor="#ffff6318"
                    android:textSize="14sp"
                    android:paddingLeft="35dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/shape_rectangle_gray_white_15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/detailPlayUserLocationAndTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/squareUserIv"/>

            <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_flash_small"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/btnChat"
                    app:layout_constraintLeft_toLeftOf="@id/btnChat"
                    app:layout_constraintTop_toTopOf="@id/btnChat"/>

            <VideoView
                    android:id="@+id/squareUserAudio"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="252dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailPlayUserLocationAndTime"/>

            <TextView
                    android:id="@+id/squareContent"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="5"
                    android:text="从 2015 年 4 月起，Ant Design 在蚂蚁金服中后台产品线迅速推广，对接多条业务线，覆盖系统 800 个以上。定位于中台业务的 Ant Design 兼顾专业和非专业的设计人员，具有学习成本低、上手速度快、实现效果好等特点，并且提供从界面设计到前端开发的全链路…展开以大大提升设计和开发的效率。"
                    android:textColor="@color/colorBlack22"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.3"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/squareUserIv"
                    app:layout_constraintTop_toBottomOf="@id/squareUserAudio"
                    />

            <TextView
                    android:id="@+id/squareMoreContentBtn"
                    android:text="展开"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/squareContent"
                    app:layout_constraintTop_toBottomOf="@id/squareContent"/>


            <TextView
                    android:id="@+id/squareDianzanBtn"
                    android:drawableLeft="@drawable/icon_dianzan_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:drawablePadding="8dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack22"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/squareUserIv"
                    app:layout_constraintTop_toBottomOf="@id/squareMoreContentBtn"/>


            <TextView
                    android:id="@+id/squareCommentBtn"
                    android:drawableLeft="@drawable/icon_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:drawablePadding="8dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack22"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintStart_toEndOf="@id/squareDianzanBtn"
                    app:layout_constraintTop_toTopOf="@id/squareDianzanBtn"/>


            <TextView
                    android:id="@+id/squareZhuanfaBtn"
                    android:drawableLeft="@drawable/icon_zhuanfa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:drawablePadding="8dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack22"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintStart_toEndOf="@id/squareCommentBtn"
                    app:layout_constraintTop_toTopOf="@id/squareDianzanBtn"/>

            <TextView
                    android:id="@+id/t1"
                    android:layout_marginTop="20dp"
                    android:text="热门评论"
                    android:textColor="@color/colorGrayText"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/colorDivider"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/squareDianzanBtn"/>

            <com.example.demoapplication.widgets.CommentExpandableListView
                    android:id="@+id/hotCommentList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:listSelector="@color/colorTransparent"
                    android:scrollbars="none"
                    android:layout_marginBottom="60dp"
                    app:layout_constraintTop_toBottomOf="@id/t1"/>

            <TextView
                    android:id="@+id/t2"
                    android:layout_marginTop="20dp"
                    android:text="所有评论"
                    android:textColor="@color/colorGrayText"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/colorDivider"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hotCommentList"/>

            <com.example.demoapplication.widgets.CommentExpandableListView
                    android:id="@+id/allCommentList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:listSelector="@color/colorTransparent"
                    android:scrollbars="none"
                    android:layout_marginBottom="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/t2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>