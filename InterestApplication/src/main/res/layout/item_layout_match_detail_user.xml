<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/labelIcon"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_gender_woman"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:id="@+id/labelName"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:text="篮球"
            android:textColor="#FF191919"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@id/labelIcon"
            app:layout_constraintLeft_toRightOf="@id/labelIcon"
            app:layout_constraintTop_toTopOf="@id/labelIcon"
            />


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/labelQualityRv"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_marginRight="15dp"
            app:layout_constraintLeft_toLeftOf="@id/labelIcon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelIcon"/>
</androidx.constraintlayout.widget.ConstraintLayout>


