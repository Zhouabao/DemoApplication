<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sdy.jitangapplication.nim.uikit.common.media.imagepicker.video.GLVideoView
            android:id="@id/widget_video_view_texture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <View
            android:id="@+id/widget_video_view_view1"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="174dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/shape_oval_orange" />

        <TextView
            android:id="@id/widget_video_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:id="@id/widget_video_view_pause"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@id/widget_video_view_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <View
        android:id="@id/widget_video_view_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_7f111111" />

    <ImageView
        android:id="@id/widget_video_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/icon_video" />

    <com.sdy.jitangapplication.nim.uikit.common.media.imagepicker.view.GLBusyIndicatorView
        android:id="@id/widget_video_view_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:id="@id/widget_video_view_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/nim_selector_widget_video_view_full_bg"
        android:drawableLeft="@drawable/icon_full"
        android:drawablePadding="3dp"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        android:text="@string/fullscreen"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

</merge>