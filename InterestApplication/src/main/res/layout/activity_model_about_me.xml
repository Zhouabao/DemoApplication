<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.ModelAboutMeActivity">

    <TextView
            android:id="@+id/btnBack"
            android:drawableLeft="@drawable/icon_return"
            android:layout_width="wrap_content"
            android:text="继续编辑"
            android:paddingLeft="15dp"
            android:drawablePadding="5dp"
            android:textColor="#ff191919"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_height="56dp"/>


    <com.kennyc.view.MultiStateView
            android:id="@+id/modelStateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:msv_errorView="@layout/error_layout"
            app:msv_loadingView="@layout/loading_layout"
            app:msv_viewState="loading">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/modelRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlEnableLoadMore="true"
                app:srlEnableLoadMoreWhenContentNotFull="false"
                app:srlEnableRefresh="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/moreInfoTitle"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="看看别人怎么写"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/icon_eye"
                        android:textStyle="bold"
                        android:textColor="#ff191919"
                        android:layout_marginLeft="15dp"
                        android:textSize="24sp"
                        android:layout_marginBottom="30dp"
                        />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/modelMeRv"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    </com.kennyc.view.MultiStateView>

</LinearLayout>