<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ver="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.activity.VerifyCodeActivity">


    <ImageView
            android:id="@+id/btnBack"
            style="@style/BckBtnStyle"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:id="@+id/tv1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="验证码"
            android:textColor="#ff262626"
            android:textSize="27sp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF4C4C4C"
            android:textSize="17sp"
            android:layout_marginTop="9dp"
            app:layout_constraintLeft_toLeftOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            tools:text="验证码已发至 13990811869"/>

    <TextView
            android:id="@+id/changePhone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="#FF519AFB"
            android:textSize="14sp"
            android:layout_marginLeft="3dp"
            app:layout_constraintBottom_toBottomOf="@id/tvPhone"
            app:layout_constraintLeft_toRightOf="@id/tvPhone"
            app:layout_constraintTop_toTopOf="@id/tvPhone"
            android:text="修改"/>

    <!--此处安装一个验证控件-->



    <com.dalimao.corelibrary.VerificationCodeInput
            android:id="@+id/inputVerifyCode"
            android:layout_marginTop="76dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPhone"
            ver:box="6"
            ver:child_v_padding="3dp"
            ver:inputType="number"/>


    <TextView
            android:id="@+id/countVerifyCodeTime"
            android:textColor="#FFB2B2B2"
            android:layout_width="0dp"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputVerifyCode"
            tools:text="验证码已发送 60s"/>
</androidx.constraintlayout.widget.ConstraintLayout>