<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_play_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:onClick="onClick"
                tools:ignore="contentDescription">

    <!--视频view-->
    <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>


    <FrameLayout
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/record_mask_buttom"/>

    </FrameLayout>


    <TextView
            android:id="@+id/record_tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="无"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:visibility="gone"/>

    <!--录制-->
    <RelativeLayout
            android:id="@+id/record_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

        <RelativeLayout
                android:id="@+id/layout_record_btns"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            <com.example.demoapplication.videorecord.ComposeRecordBtn
                    android:id="@+id/compose_record_btn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"/>


            <ImageView
                    android:id="@+id/btn_switch_camera"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/compose_record_btn"
                    android:onClick="onClick"
                    android:src="@drawable/selector_switch_camera"/>

            <ImageView
                    android:id="@+id/btn_album"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@id/compose_record_btn"
                    android:onClick="onClick"
                    android:src="@drawable/icon_album"/>

        </RelativeLayout>

        <!--滤镜预览-->
        <com.example.demoapplication.videorecord.BeautySettingPannel
                android:id="@+id/beauty_pannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_record_btns"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>


    </RelativeLayout>


    <FrameLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

        <ImageView
                android:id="@+id/back_ll"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_back_white"/>


    </FrameLayout>

    <ImageView
            android:id="@+id/iv_snapshot_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

</RelativeLayout>