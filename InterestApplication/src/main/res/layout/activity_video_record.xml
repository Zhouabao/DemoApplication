<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:ignore="contentDescription"
        tools:context=".ui.activity.VideoRecordActivity">

    <com.tencent.rtmp.ui.TXCloudVideoView
            android:layout_centerInParent="true"
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <!--录制-->
    <RelativeLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/record_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            >

        <TextView
                android:drawablePadding="10dp"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/icon_upload"
                android:text="上传"
                android:layout_marginLeft="80dp"
                android:id="@+id/upload_btn"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <com.example.demoapplication.videorecord.ComposeRecordBtn
                android:id="@+id/compose_record_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"/>

        <TextView
                android:layout_toRightOf="@id/compose_record_btn"
                android:drawablePadding="10dp"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/icon_upload"
                android:text="翻转"
                android:id="@+id/reverse_btn"
                android:layout_marginLeft="60dp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="120dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>