<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:gs="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".ui.chat.MatchSucceedActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/gradient_match_succeed_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/btnBack"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@drawable/icon_back_white"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:scaleType="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/hotT1"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已配对"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                />

        <ImageView
                android:id="@+id/iconMine"
                android:alpha="0"
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="70dp"
                android:rotation="-22.5"
                android:background="@drawable/default_image_10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hotT1"
                />

        <ImageView
                android:id="@+id/iconOther"
                android:alpha="0"
                android:rotation="22.5"
                android:background="@drawable/default_image_10dp"
                android:scaleType="centerCrop"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginRight="70dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconMine"
                />

        <ImageView
                android:id="@+id/iconLike"
                android:layout_marginTop="110dp"
                android:scaleType="center"
                android:background="@drawable/shape_oval_white"
                android:src="@drawable/icon_like"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconMine"/>

        <TextView
                android:id="@+id/matchTip"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:layout_height="wrap_content"
                android:text="你和 Username 都彼此欣赏 \n不如就说先点什么吧"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconLike"
                />

        <EditText
                android:id="@+id/etMsg"
                android:hint="说点什么打破僵局吧"
                android:textColorHint="#ff9b9b9b"
                android:textColor="@color/colorBlackText"
                android:textSize="18sp"
                android:focusable="true"
                android:paddingLeft="15dp"
                android:background="@color/colorWhite"
                android:layout_width="0dp"
                android:paddingRight="60dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        <Button
                android:id="@+id/sendMsg"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_send_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="@id/etMsg"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/etMsg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>