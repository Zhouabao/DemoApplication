<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:gs="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".ui.chat.MatchSucceedActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/gradient_match_succeed_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/btnBack"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_back_white"
                android:layout_width="24dp"
                android:layout_marginTop="56dp"
                android:layout_height="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/t1"
                android:layout_marginTop="26dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已配对"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                />

        <com.example.baselibrary.widgets.RoundImageView
                android:id="@+id/iconMine"
                android:layout_marginTop="12dp"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_avatar_01"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="70dp"
                app:layout_constraintTop_toBottomOf="@id/t1"
                gs:borderRadius="10dp"
                gs:type="round"/>

        <com.example.baselibrary.widgets.RoundImageView
                android:id="@+id/iconOther"
                android:scaleType="centerCrop"
                gs:borderRadius="10dp"
                gs:type="round"
                android:src="@drawable/img_avatar_04"
                android:layout_marginTop="12dp"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginRight="70dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/t1"/>

        <ImageView
                android:id="@+id/iconLike"
                android:layout_marginTop="110dp"
                android:scaleType="center"
                android:background="@drawable/shape_oval_white"
                android:src="@drawable/icon_like"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconMine"/>

        <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="198dp"
                android:lineSpacingMultiplier="1.3"
                android:layout_height="wrap_content"
                android:text="你和 Username 都彼此欣赏 不如就说先点什么吧"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconLike"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
            android:id="@+id/et"
            android:hint="      说点什么打破僵局吧"
            android:textColor="#ff9b9b9b"
            android:textSize="18sp"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>