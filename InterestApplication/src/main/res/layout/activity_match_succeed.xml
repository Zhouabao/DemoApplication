<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".ui.chat.MatchSucceedActivity">


    <ImageView
            android:id="@+id/ivSmallLove"
            android:layout_height="219dp"
            android:layout_width="219dp"
            android:src="@drawable/match_succeed_bg_small_love"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/hotT1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <ImageView
            android:id="@+id/ivMiddleLove"
            android:layout_height="283dp"
            android:layout_width="283dp"
            android:src="@drawable/match_succeed_bg_middle_love"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/hotT1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/ivBigLove"
            android:layout_height="341dp"
            android:layout_width="341dp"
            android:src="@drawable/match_succeed_bg_big_love"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/hotT1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iconOther"
            android:layout_height="159dp"
            android:layout_width="159dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_default_avator_logo"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_overlay="true"
            app:civ_border_width="6dp"
            app:layout_constraintBottom_toBottomOf="@id/ivSmallLove"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivSmallLove"
            />


    <TextView
            android:id="@+id/hotT1"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_width="wrap_content"
            android:text="配对成功"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconOther"
            />

    <TextView
            android:id="@+id/matchTip"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:text="你与Username\n于千万人中彼此欣赏，终于相遇！"
            android:textColor="#66000000"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hotT1"
            />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMsg"
            android:background="@drawable/shape_rectangle_light_gray_24dp"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:minHeight="46dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="107dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/matchTip"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <EditText
                android:id="@+id/etMsg"
                android:background="@null"
                android:focusable="true"
                android:hint="现在去开启与TA的故事"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:paddingLeft="15dp"
                android:paddingRight="46dp"
                android:textColor="@color/colorBlackText"
                android:textColorHint="#ff9b9b9b"
                android:textSize="14sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        <Button
                android:id="@+id/sendMsg"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/selector_send_btn"
                android:layout_height="32dp"
                android:layout_marginRight="7dp"
                android:layout_width="32dp"
                app:layout_constraintBottom_toBottomOf="@id/etMsg"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/etMsg"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
            android:id="@+id/btnBack"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="再看看"
            android:textColor="#ffc5c6c8"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/clMsg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>


