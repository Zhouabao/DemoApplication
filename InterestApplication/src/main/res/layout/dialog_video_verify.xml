<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rectangle_white_15dp"
    android:orientation="vertical">

    <com.zhpan.bannerview.BannerViewPager
        android:id="@+id/bannerVideoVerify"
        android:layout_width="0dp"
        android:overScrollMode="never"
        android:layout_height="290dp"
        app:bvp_auto_play="false"
        app:bvp_can_loop="true"
        app:bvp_indicator_checked_color="#94B5FB"
        app:bvp_indicator_gravity="center"
        app:bvp_indicator_normal_color="#3394B5FB"
        app:bvp_indicator_slide_mode="normal"
        app:bvp_indicator_style="round_rect"
        app:bvp_round_corner="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goVerifyBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle_blue_bottom_15dp"
        android:gravity="center"
        android:text="视频认证介绍"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bannerVideoVerify" />

</androidx.constraintlayout.widget.ConstraintLayout>