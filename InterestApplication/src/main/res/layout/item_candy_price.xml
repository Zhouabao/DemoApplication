<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/icon_charge_vip_bg"
    android:minHeight="99dp">

    <TextView
        android:id="@+id/candyCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="21dp"
        android:drawableRight="@drawable/icon_candy_detail"
        android:drawablePadding="4dp"
        android:text="120"
        android:textColor="#191919"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/candyFirstPrice"
        android:layout_width="89dp"
        android:layout_height="33dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/rectangle_orange_18dp"
        android:gravity="center"
        android:text="¥50"
        android:textColor="#ffff6318"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/candyPrice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/candyCount" />


    <TextView
        android:id="@+id/candyPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="¥ 30.00"
        android:textColor="#ff888d92"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/candyCount"
        app:layout_constraintRight_toLeftOf="@id/candyDiscount"
        app:layout_constraintTop_toBottomOf="@id/candyCount" />

    <ImageView
        android:id="@+id/candyDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="74dp"
        android:background="@drawable/icon_first_charge"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/candyFirstPrice"
        app:layout_constraintRight_toRightOf="@id/candyFirstPrice"
        app:layout_constraintTop_toTopOf="@id/candyFirstPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>