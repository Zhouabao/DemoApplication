<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/messageActivityLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_message_default_bg"
              android:orientation="vertical">

    <FrameLayout
            android:id="@+id/message_activity_list_view_container"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">

        <com.netease.nim.uikit.business.session.helper.MsgBkImageView
                android:id="@+id/message_activity_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ProgressBar
                    android:id="@+id/outdateTime"
                    android:visibility="gone"
                    style="@style/progressBarHorizontal"
                    />


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/messageListView"
                    style="@style/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <com.example.demoapplication.widgets.TimeRunTextView
                android:id="@+id/outdateTimeText"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:text="08:23后消息过期"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="27dp"/>

        <TextView
                android:id="@+id/btnMakeFriends"
                android:text="成为好友"
                android:background="@drawable/make_friend_bg"
                android:layout_gravity="right"
                android:layout_width="107dp"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="85dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_like_white"
                android:layout_height="35dp"/>
    </FrameLayout>

    <include layout="@layout/chat_nim_message_activity_bottom_layout"/>

</LinearLayout>