<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="71dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle_cover_black65_15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.sdy.baselibrary.widgets.RoundImageView
                android:scaleType="centerCrop"
                android:src="@drawable/icon_guide_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:borderRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:type="round"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guideCl"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <View
                    android:id="@+id/dash_horizontal"
                    android:background="@drawable/shape_dash_line_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layerType="software"
                    android:layout_marginBottom="220dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            <View
                    android:layerType="software"
                    android:background="@drawable/shape_dash_line_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/dash_horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <View
                    android:id="@+id/view_guide_center"
                    android:background="@color/transparent"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/guideLast"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/dash_horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@id/view_guide_center"
                    app:layout_constraintTop_toTopOf="parent">

                <View
                        android:id="@+id/last"
                        android:alpha="0.4"
                        android:layout_width="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_oval_orange"
                        android:layout_height="16dp"
                        android:layout_marginLeft="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                        android:id="@+id/lastIv"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_guide_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/last"
                        />

                <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击上一张"
                        android:textColor="#ffffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lastIv"
                        />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/guideNext"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/dash_horizontal"
                    app:layout_constraintLeft_toLeftOf="@id/view_guide_center"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <View
                        android:id="@+id/next"
                        android:layout_width="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_oval_orange"
                        android:layout_height="16dp"
                        android:alpha="0.4"
                        android:layout_marginRight="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                        android:id="@+id/nextIv"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_guide_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/next"
                        />

                <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击下一张"
                        android:textColor="#ffffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/nextIv"
                        />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/guideDetail"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/view3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@id/view2"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal">

                <View
                        android:id="@+id/detail"
                        android:alpha="0.4"
                        android:layout_width="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_oval_orange"
                        android:layout_height="16dp"
                        app:layout_constraintBottom_toBottomOf="@id/view_detail"
                        app:layout_constraintLeft_toLeftOf="@id/detailIv"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                <ImageView
                        android:id="@+id/detailIv"
                        android:src="@drawable/icon_guide_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="4dp"
                        app:layout_constraintLeft_toLeftOf="@id/tvDetail"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/detail"
                        />

                <TextView
                        android:id="@+id/tvDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击查看用户详情"
                        android:textColor="#ffffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detailIv"
                        />

                <View
                        android:id="@+id/view_detail"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                    android:id="@+id/guideGreetContent"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是Ta给你打的招呼"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/view3"
                    app:layout_constraintLeft_toLeftOf="@id/view3"
                    app:layout_constraintRight_toRightOf="@id/view3"
                    app:layout_constraintTop_toTopOf="@id/view3"
                    />


            <View
                    android:id="@+id/view1"
                    android:alpha="0.3"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="#D8D8D8"
                    android:layout_width="134dp"
                    android:layout_height="23dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal"/>

            <View
                    android:id="@+id/view2"
                    android:alpha="0.3"
                    android:background="#D8D8D8"
                    android:layout_width="196dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="@id/view1"
                    app:layout_constraintTop_toBottomOf="@id/view1"/>

            <View
                    android:id="@+id/dash_horizontal1"
                    android:background="@drawable/shape_dash_line_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layerType="software"
                    android:layout_marginTop="27dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view2"
                    />

            <View
                    android:id="@+id/view3"
                    android:background="@drawable/shape_rectangle_black_transparent_bottom_left_right_15dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha="0.3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal1"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guideLike"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:background="@drawable/gradient_guide_like_bg"
                    android:layout_width="140dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_greet_like"
                    android:layout_width="78dp"
                    android:layout_centerVertical="true"
                    android:layout_height="78dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:background="@color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


            <ImageView
                    android:src="@drawable/icon_guide_arrow_right"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintBottom_toTopOf="@id/guide_like_hand_right"
                    app:layout_constraintLeft_toLeftOf="@id/guide_like_hand_right"
                    app:layout_constraintRight_toRightOf="@id/guide_like_hand_right"/>

            <ImageView
                    android:id="@+id/guide_like_hand_right"
                    android:layout_marginBottom="32dp"
                    android:src="@drawable/icon_guide_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/t1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                    android:id="@+id/t1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="向右滑动与Ta聊天"
                    android:textColor="#ffffffff"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guideDislike"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:background="@drawable/gradient_guide_dislike_bg"
                    android:layout_width="140dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_greet_dislike"
                    android:layout_width="78dp"
                    android:layout_centerVertical="true"
                    android:layout_height="78dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


            <ImageView
                    android:src="@drawable/icon_guide_arrow_left"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    app:layout_constraintBottom_toTopOf="@id/guide_dislike_hand_left"
                    app:layout_constraintLeft_toLeftOf="@id/guide_dislike_hand_left"
                    app:layout_constraintRight_toRightOf="@id/guide_dislike_hand_left"/>

            <ImageView
                    android:id="@+id/guide_dislike_hand_left"
                    android:layout_marginBottom="32dp"
                    android:src="@drawable/icon_guide_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/t2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                    android:id="@+id/t2"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="向左滑动稍后处理"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/intentionMatchingCl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <TextView
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:text="全部招呼"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
                android:id="@+id/iv1"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/icon_guide_arrow_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标记为稍后处理的对话\n可以在全部招呼里回复"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@id/iv1"
                app:layout_constraintTop_toBottomOf="@id/iv1"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


