<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="match_parent">


    <com.github.mmin18.widget.RealtimeBlurView
            android:id="@+id/contentFl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:realtimeBlurRadius="10dp"
            app:realtimeOverlayColor="#8000"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialogView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/gradient_vip_charge_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.sdy.jitangapplication.widgets.RoundTopImageView
                android:id="@+id/purchaseBg"
                android:scaleType="fitXY"
                android:src="@drawable/icon_gradient_vip_charge_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginBottom="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:topRadius="10dp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/purchaseLl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/bannerVip"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                    android:id="@+id/bannerIndicator"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bannerVip"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/completeInfoBtn"
                android:visibility="gone"
                android:drawableLeft="@drawable/icon_edit_white"
                android:text="完善资料"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/rectangle_cover_bg_20"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/purchaseBg"
                app:layout_constraintTop_toTopOf="@id/purchaseBg"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vipChargeRv"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_marginTop="22dp"
                android:background="@color/transparent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/purchaseLl"/>

        <RelativeLayout
                android:id="@+id/zhiPayBtn"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_rectangle_blue_vip"
                android:layout_height="47dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vipChargeRv">

            <TextView
                    android:id="@+id/zhiPayPrice"
                    android:text="支付宝支付"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:drawablePadding="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/icon_pay_ali"
                    />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/wechatPayBtn"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_rectangle_green_vip"
                android:layout_height="47dp"
                android:layout_marginBottom="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/zhiPayBtn">

            <TextView
                    android:id="@+id/wechatPayPrice"
                    android:text="微信支付"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:drawablePadding="9dp"
                    android:drawableLeft="@drawable/icon_pay_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/balancePayBtn"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_rectangle_green_vip"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wechatPayBtn">

            <TextView
                    android:text="余额支付"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:drawablePadding="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    />

        </RelativeLayout>

        <TextView
                android:id="@+id/refuseBtn"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不，谢谢"
                android:textColor="#FFCBCDD3"
                android:textSize="15sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/balancePayBtn"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
            android:id="@+id/loading"
            layout="@layout/loading_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="550dp"/>
</FrameLayout>
