<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialogView"
            android:visibility="visible"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerVip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/gradient_vip_charge_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <RadioGroup
                android:id="@+id/bannerIndicator"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/bannerVip"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
        </RadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/bannerVip">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/vipChargeRv"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:layout_width="0dp"
                    android:gravity="center_horizontal"
                    android:layout_height="142dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

            </androidx.recyclerview.widget.RecyclerView>


            <CheckBox
                    android:id="@+id/autoChargeCb"
                    android:checked="true"
                    android:button="@null"
                    android:background="@drawable/selector_checkbox"
                    android:layout_marginTop="10dp"
                    android:layout_width="16dp"
                    android:textColor="@color/colorGrayText"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    app:layout_constraintRight_toLeftOf="@id/t1"
                    app:layout_constraintTop_toBottomOf="@id/vipChargeRv"/>

            <TextView
                    android:id="@+id/t1"
                    android:checked="true"
                    android:text="开通自动续费，享受特惠价格"
                    android:button="@drawable/selector_checkbox"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorGrayText"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_height="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/autoChargeCb"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/autoChargeCb"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/autoChargeCb"/>

            <RelativeLayout
                    android:id="@+id/zhiPayBtn"
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape_rectangle_blue_vip"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/autoChargeCb">

                <TextView
                        android:text="支付宝支付"
                        android:textColor="#ffffffff"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:drawablePadding="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:drawableLeft="@drawable/icon_pay_ali"
                        />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/wechatPayBtn"
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape_rectangle_green_vip"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/zhiPayBtn">

                <TextView
                        android:text="微信支付"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:layout_centerInParent="true"
                        android:textSize="16sp"
                        android:drawablePadding="9dp"
                        android:drawableLeft="@drawable/icon_pay_wechat"
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/balancePayBtn"
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape_rectangle_green_vip"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wechatPayBtn">

                <TextView
                        android:text="余额支付"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:layout_centerInParent="true"
                        android:textSize="16sp"
                        android:drawablePadding="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        />

            </RelativeLayout>

            <TextView
                    android:id="@+id/inviteBtn"
                    android:layout_marginTop="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限时邀请好友获取"
                    android:textColor="@color/colorOrange"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wechatPayBtn"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
            android:id="@+id/loading"
            layout="@layout/loading_layout"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</FrameLayout>