<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/labelRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/labelImg"
            android:layout_marginTop="12dp"
            android:background="@drawable/default_image_15dp"
            android:src="@drawable/icon_logo"
            android:scaleType="centerCrop"
            android:layout_width="107dp"
            android:layout_height="107dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:id="@+id/labelImgBg"
            android:background="@drawable/icon_cover_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/labelImg"
            app:layout_constraintLeft_toLeftOf="@id/labelImg"
            app:layout_constraintRight_toRightOf="@id/labelImg"
            app:layout_constraintTop_toTopOf="@id/labelImg"/>

    <ImageView
            android:id="@+id/labelDelete"
            android:src="@drawable/icon_delete_my_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="@id/labelImg"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/labelName"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:text="游戏主区"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/labelImg"
            />


</androidx.constraintlayout.widget.ConstraintLayout>


