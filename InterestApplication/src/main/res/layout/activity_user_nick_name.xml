<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ver="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.activity.UserNickNameActivity">


    <ImageView
            android:id="@+id/btnBack"
            style="@style/BckBtnStyle"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/help"
            android:visibility="gone"
            android:text="帮助"
            android:textColor="#ffb2b2b2"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:id="@+id/tv1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="昵称"
            android:textColor="#ff262626"
            android:textSize="27sp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <TextView
            android:id="@+id/nickNameNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack4C"
            android:textSize="17sp"
            android:layout_marginTop="9dp"
            android:text="现在为自己取一个有趣的名字吧"
            app:layout_constraintLeft_toLeftOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginRight="25dp"
            app:layout_constraintLeft_toLeftOf="@id/nickNameNotify"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nickNameNotify"
            >


        <EditText
                android:id="@+id/nickNameEt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的昵称"
                android:textSize="18sp"
                android:maxLength="10"
                android:textColor="@color/colorBlack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/nickNameClean"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_close"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/nickNameEt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/nickNameEt"/>

        <View
                android:id="@+id/nickNameBg"
                android:layout_marginTop="6dp"
                android:background="@color/colorDividerC4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nickNameEt"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
            android:id="@+id/btnNextStep"
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:layout_marginTop="63dp"
            android:background="@drawable/selector_confirm_btn1"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffffff"
            android:enabled="false"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/clPhone"
            app:layout_constraintRight_toRightOf="@id/clPhone"
            app:layout_constraintTop_toBottomOf="@id/clPhone"/>
</androidx.constraintlayout.widget.ConstraintLayout>