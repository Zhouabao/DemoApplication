<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ver="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.activity.UserGenderActivity">


    <ImageView
            android:id="@+id/btnBack"
            style="@style/BckBtnStyle"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:visibility="gone"
            android:id="@+id/help"
            android:text="帮助"
            android:textColor="#ffb2b2b2"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:id="@+id/tv1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="您的性别是？"
            android:textColor="#ff262626"
            android:textSize="27sp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <TextView
            android:id="@+id/nickNameNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack4C"
            android:textSize="17sp"
            android:layout_marginTop="9dp"
            android:text="性别选定了就不能更改了奥"
            app:layout_constraintLeft_toLeftOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv1"/>

    <RelativeLayout
            android:id="@+id/rlWoman"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/nickNameNotify">

        <ImageView
                android:src="@drawable/icon_gender_woman"
                android:layout_width="142dp"
                android:layout_height="142dp"/>

        <ImageView
                android:id="@+id/womanIv"
                android:visibility="gone"
                android:layout_marginTop="110dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_checked_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/womanTv"
                android:text="女"
                android:textColor="@color/colorGrayC5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="142dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rlMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/rlWoman">

        <ImageView
                android:src="@drawable/icon_gender_man"
                android:layout_width="142dp"
                android:layout_height="142dp"/>

        <ImageView
                android:id="@+id/manIv"
                android:visibility="gone"
                android:layout_marginTop="110dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_checked_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/manTv"
                android:text="男"
                android:textColor="@color/colorGrayC5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="142dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/btnNextStep"
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/selector_confirm_btn1"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffffff"
            android:enabled="false"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/rlWoman"
            app:layout_constraintRight_toRightOf="@id/rlMan"
            app:layout_constraintTop_toBottomOf="@id/rlWoman"/>
</androidx.constraintlayout.widget.ConstraintLayout>