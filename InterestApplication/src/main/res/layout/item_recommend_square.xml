<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <ImageView
                android:id="@+id/squareImg"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/squareVideoState"
                android:layout_height="24dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_width="24dp"
                android:src="@drawable/nim_music_icon_play"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/squareDistance"
                android:background="@drawable/rectangle_white_3dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:text="300Km"
                android:textColor="#FF191919"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/squareImg"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
                android:id="@+id/squareContent"
                android:textStyle="bold"
                android:textColor="#ff191919"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="有功无过是短暂的，无功有过是行不通的，有功…"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/squareImg"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/squareAvator"
                android:layout_marginTop="8dp"
                android:src="@drawable/icon_default_avator"
                android:layout_width="19dp"
                android:layout_marginBottom="8dp"
                android:layout_height="19dp"
                app:layout_constraintBottom_toBottomOf="@id/squareLike"
                app:layout_constraintLeft_toLeftOf="@id/squareContent"
                app:layout_constraintTop_toTopOf="@id/squareLike"/>

        <TextView
                android:id="@+id/squareName"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Alice DanielAlice"
                android:textColor="#ff888d92"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toBottomOf="@id/squareLike"
                app:layout_constraintLeft_toRightOf="@id/squareAvator"
                app:layout_constraintRight_toLeftOf="@id/squareLike"
                app:layout_constraintTop_toTopOf="@id/squareLike"
                />

        <TextView
                android:id="@+id/squareLike"
                android:drawableLeft="@drawable/icon_dianzan"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="#ff888d92"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/squareContent"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

