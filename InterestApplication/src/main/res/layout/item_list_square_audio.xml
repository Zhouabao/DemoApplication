<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

    <include
            layout="@layout/layout_square_list_top"/>


    <LinearLayout
            android:id="@+id/squareUserAudio"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/gradient_audio_bg"
            >

        <ImageView
                android:id="@+id/audioPlayBtn"
                android:background="@drawable/shape_oval_white"
                android:layout_gravity="center"
                android:src="@drawable/icon_play_audio"
                android:layout_width="26dp"
                android:layout_height="26dp"/>

        <TextView
                android:id="@+id/audioTime"
                android:layout_marginLeft="10dp"
                tools:text="00:30"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.example.demoapplication.player.VoisePlayingIcon
                android:id="@+id/voicePlayView"
                android:layout_width="160dp"
                android:layout_height="22dp"
                android:background="@color/transparent"
                app:pointer_color="@color/colorWhite"
                app:pointer_num="11"
                android:layout_marginLeft="12dp"
                app:pointer_width="5"/>


    </LinearLayout>

    <include
            layout="@layout/layout_square_list_bottom"/>

</LinearLayout>