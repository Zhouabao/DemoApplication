<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#000"
                                                   tools:context=".ui.activity.WelcomeActivity">

    <TextView
            android:id="@+id/tv1"
            android:layout_width="78dp"
            android:layout_height="18dp"
            android:text="选择登陆方式"
            android:textColor="#ff9b9b9b"
            android:textSize="13sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/phoneLoginBtn"/>

    <ImageView

            android:id="@+id/phoneLoginBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_phone"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/wechatLoginBtn"
            android:layout_marginBottom="50dp"
            />

    <ImageView
            android:id="@+id/wechatLoginBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_wechat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/phoneLoginBtn"/>

    <ImageView
            android:id="@+id/qqLoginBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_qq"
            app:layout_constraintLeft_toRightOf="@id/wechatLoginBtn"
            app:layout_constraintTop_toTopOf="@id/phoneLoginBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>