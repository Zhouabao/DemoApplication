<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/shape_rectangle_gray_10dp">

    <ImageView
        android:id="@+id/addressChecked"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/icon_checked_address"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="习蓉习蓉习蓉习蓉习蓉习蓉习蓉"
        android:textColor="#ffff6318"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/addressPhone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="left"
        android:text="17123585545"
        android:textColor="#ffff6318"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/addressContent"
        app:layout_constraintLeft_toLeftOf="@id/addressName"
        app:layout_constraintRight_toRightOf="@id/addressName"
        app:layout_constraintTop_toBottomOf="@id/addressName" />

    <TextView
        android:id="@+id/addressContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="重庆重庆市巫溪县自强大道397号巫溪县自强大道39…"
        android:textColor="#ffff864c"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/addressName"
        app:layout_constraintRight_toRightOf="@id/addressName"
        app:layout_constraintTop_toBottomOf="@id/addressPhone" />
</androidx.constraintlayout.widget.ConstraintLayout>