<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="5dp"
        android:maxWidth="@dimen/max_bubble_width">

        <TextView
            android:id="@+id/giftTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/giftImg"
            android:layout_alignBottom="@id/giftImg"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="送给想吃土豆的猪价值32颗糖果的香蕉"
            android:textColor="#191919"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/giftImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/giftTitle"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_default_avator" />

        <TextView
            android:id="@+id/giftReceiver"
            android:layout_width="63dp"
            android:layout_height="17dp"
            android:layout_below="@id/giftImg"
            android:layout_marginTop="20dp"
            android:text="送礼物给Ta"
            android:textColor="#ffc5c6c8"
            android:textSize="12sp" />
    </RelativeLayout>
</FrameLayout>
