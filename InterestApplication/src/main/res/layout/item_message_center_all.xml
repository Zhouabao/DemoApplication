<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">



    <ImageView
            android:id="@+id/messageAllIcon"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_message_like"
            android:layout_width="105dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:layout_marginRight="3dp"
            app:layout_constraintRight_toRightOf="@id/messageAllCount"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/messageAllCount"
            android:textStyle="bold"
            android:text="9999"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/rectangle_unread_msg_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/messageAlType"
            android:textStyle="bold"
            android:text="点赞"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="@id/messageAllIcon"
            app:layout_constraintBottom_toBottomOf="@id/messageAllIcon"
            app:layout_constraintTop_toTopOf="@id/messageAllIcon"/>
</androidx.constraintlayout.widget.ConstraintLayout>
