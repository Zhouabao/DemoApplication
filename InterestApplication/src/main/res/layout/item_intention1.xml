<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/shape_rectangle_gray_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/intentionIcon"
            android:src="@drawable/icon_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/intentionName"
            android:gravity="center"
            android:text="哈哈哈哈"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:background="@drawable/shape_rectangle_gray_transparent_bottom_left_right_15dp"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@id/intentionIcon"
            app:layout_constraintLeft_toLeftOf="@id/intentionIcon"
            app:layout_constraintRight_toRightOf="@+id/intentionIcon"/>


</androidx.constraintlayout.widget.ConstraintLayout>



