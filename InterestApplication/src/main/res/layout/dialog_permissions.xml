<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/icon_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/permission_tip"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:drawablePadding="10dp"
            android:text="存储权限"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textColor="@color/colorBlackTitle"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:drawablePadding="10dp"
            android:text="相机权限"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/colorBlackTitle"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:drawablePadding="10dp"
            android:text="语音权限"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/colorBlackTitle"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:drawablePadding="10dp"
            android:text="位置权限"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/colorBlackTitle"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/allowPermissionBtn"
            android:layout_marginTop="59dp"
            android:text="允许权限"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/colorOrange"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>


</LinearLayout>