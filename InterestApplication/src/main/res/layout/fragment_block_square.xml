<?xml version="1.0" encoding="utf-8"?>
<com.kennyc.view.MultiStateView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/stateBlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        app:msv_emptyView="@layout/empty_layout_block"
        app:msv_errorView="@layout/error_layout"
        app:msv_viewState="loading"
        app:msv_loadingView="@layout/loading_layout">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/refreshBlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            app:srlEnableAutoLoadMore="true"
            app:srlEnableLoadMore="true"
            app:srlEnableLoadMoreWhenContentNotFull="true"
            app:srlEnableNestedScrolling="true"
            app:srlEnableRefresh="false">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/blockRv"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:context=".ui.fragment.BlockSquareFragment">

        </androidx.recyclerview.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</com.kennyc.view.MultiStateView>
