<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_rectangle_white_14dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="对方设置了今日意愿"
        android:textColor="#ff000000"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="通过礼物助力或糖果招呼与对方取得联系，一起做她爱做的事"
        android:textColor="#ff000000"
        android:textSize="13sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:background="#4a3c3c43" />

    <TextView
        android:id="@+id/giftHelpChatBtn"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="礼物助力"
        android:textColor="@color/colorOrange"
        android:textSize="18sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4a3c3c43" />

    <TextView
        android:id="@+id/candySendBtn"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="200糖果"
        android:textColor="@color/colorOrange"
        android:textSize="18sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4a3c3c43" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="取消"
        android:textColor="#FFC4C4C4"
        android:textSize="16sp" />


</LinearLayout>