<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detailScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.activity.MatchDetailActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:focusable="true"
            android:descendantFocusability="blocksDescendants"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/detailPhotosVp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <LinearLayout
                android:id="@+id/detailPhotosIndicator"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/moreBtn"
                app:layout_constraintRight_toRightOf="@id/moreBtn"
                app:layout_constraintTop_toBottomOf="@id/moreBtn"
                />


        <ImageView
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="56dp"
                android:scaleType="center"
                android:src="@drawable/icon_back_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/moreBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/icon_more_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/backBtn"/>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detailThumbRv"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginBottom="20dp"
                android:padding="3dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_rectangle_transparent"
                app:layout_constraintBottom_toBottomOf="@id/detailPhotosVp"
                app:layout_constraintStart_toStartOf="@id/backBtn"/>

        <include
                layout="@layout/match_action_layout"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/detailUserName"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/detailUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名最大长度是十字"
                android:textColor="@color/colorBlackTitle"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@id/backBtn"
                app:layout_constraintTop_toBottomOf="@id/detailPhotosVp"/>

        <TextView
                android:id="@+id/detailUserInfo"
                android:layout_width="139dp"
                android:layout_height="17dp"
                android:text="24 / 天秤座 / 新媒体运营"
                android:textColor="@color/colorGrayText"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/detailUserName"
                app:layout_constraintTop_toBottomOf="@id/detailUserName"/>

        <TextView
                android:id="@+id/detailUserSign"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:text="从 2015 年 4 月起，Ant Design 在蚂蚁金服中后台产品线迅速推广，对接多条业务线，覆盖系统 800 个以上。定位于中台业务的 Ant Design 兼顾专业和非专业的设计人员，具有学习成本低、上手速度快、实现效果好等特点，并且提供从界面设计到前端开发的全链路生态，可以大大提升设计和开发的效率。"
                android:textColor="@color/colorBlack4a"
                android:lineSpacingMultiplier="1.4"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/detailUserName"
                app:layout_constraintTop_toBottomOf="@id/detailUserInfo"
                />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@color/colorDivider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailUserSign"/>

        <TextView
                android:id="@+id/hotT1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签"
                android:textStyle="bold"
                android:textColor="@color/colorBlackTitle"
                android:textSize="16sp"
                android:layout_marginTop="28dp"
                app:layout_constraintLeft_toLeftOf="@id/detailUserName"
                app:layout_constraintTop_toBottomOf="@id/detailUserSign"
                />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detailLabelRv"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/detailUserName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hotT1"/>

        <View
                android:id="@+id/view1"
                android:background="@color/colorDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@id/detailLabelRv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <TextView
                android:id="@+id/allT2"
                android:text="广场"
                android:textColor="@color/colorBlackTitle"
                android:textSize="16sp"
                android:layout_marginTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/detailUserName"
                app:layout_constraintTop_toBottomOf="@id/view1"/>

        <RadioGroup
                android:id="@+id/detailSquareSwitchRg"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/allT2">

            <RadioButton
                    android:id="@+id/rbBlock"
                    android:background="@drawable/selector_block"
                    android:button="@null"
                    android:layout_width="24dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="24dp"/>

            <RadioButton
                    android:id="@+id/rbList"
                    android:background="@drawable/selector_list"
                    android:button="@null"
                    android:layout_width="24dp"
                    android:checked="true"
                    android:layout_height="24dp"/>
        </RadioGroup>

        <FrameLayout
                android:id="@+id/detail_content_fragment"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/allT2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>