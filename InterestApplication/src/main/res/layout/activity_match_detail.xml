<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.activity.MatchDetailActivity">

    <com.kennyc.view.MultiStateView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/stateview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msv_animateViewChanges="false"
        app:msv_emptyView="@layout/empty_layout"
        app:msv_errorView="@layout/error_layout"
        app:msv_loadingView="@layout/loading_layout"
        app:msv_viewState="content"
        tools:context=".ui.activity.MatchDetailActivity">


        <FrameLayout
            android:id="@+id/userContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:visibility="visible">


            <com.sdy.jitangapplication.widgets.HeadZoomScrollView
                android:id="@+id/scrollDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--照片系列布局固定不滑动-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clPhotos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <com.sdy.jitangapplication.widgets.CommonNoScrollViewPager
                            android:id="@+id/detailPhotosVp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:transitionName="matchdetailImg"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <LinearLayout
                            android:id="@+id/detailPhotosIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="37dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />


                        <ImageView
                            android:id="@+id/backBtn"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="39dp"
                            android:scaleType="center"
                            android:src="@drawable/icon_return_oval"
                            android:visibility="visible"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/moreBtn"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginRight="15dp"
                            android:elevation="1dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_more_oval"
                            app:layout_constraintBottom_toBottomOf="@id/backBtn"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/backBtn" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/userVideoCl"
                            android:layout_width="83dp"
                            android:layout_height="104dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/shape_cover_mv_10dp"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="@id/detailPhotosIndicator"
                            app:layout_constraintLeft_toLeftOf="parent">


                            <com.sdy.baselibrary.widgets.RoundImageView
                                android:id="@+id/userVideoCover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:borderRadius="10dp"
                                app:type="round" />
                            <com.github.mmin18.widget.RealtimeBlurView
                                android:id="@+id/userVideoCoverBg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                app:realtimeBlurRadius="10dp"
                                android:background="@drawable/shape_transparent_10dp"
                                app:realtimeOverlayColor="#26000000" />
                            <ImageView
                                android:id="@+id/userVideoPlayBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:src="@drawable/icon_play_mv"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:text="视频介绍"
                                android:textColor="#ffffffff"
                                android:textSize="12sp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/userVideoPlayBtn" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <!--                        <com.sdy.jitangapplication.switchplay.SwitchVideo-->
                        <!--                            android:id="@+id/userVideo"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="0dp"-->
                        <!--                            android:visibility="gone"-->
                        <!--                            app:layout_constraintBottom_toBottomOf="@id/detailPhotosVp"-->
                        <!--                            app:layout_constraintLeft_toLeftOf="parent"-->
                        <!--                            app:layout_constraintTop_toTopOf="@id/detailPhotosVp" />-->

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <LinearLayout
                        android:id="@+id/clUserInfoTop"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:background="@drawable/shape_rectangle_top_left_right_25_corners_bg"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@id/clPhotos"
                        app:layout_constraintLeft_toLeftOf="parent">

                        <View
                            android:layout_width="45dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rectangle_gray_3dp" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clUserInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clUserInfoTop">


                        <TextView
                            android:id="@+id/detailUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/colorBlackTitle"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="小周小周，万事无忧。" />

                        <ImageView
                            android:id="@+id/detailUserVip"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/icon_pt_vip"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="@id/detailUserName"
                            app:layout_constraintLeft_toRightOf="@id/detailUserName"
                            app:layout_constraintTop_toTopOf="@id/detailUserName" />


                        <LinearLayout
                            android:id="@+id/detailUserIntention1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/gradient_orange_11dp"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="@id/detailUserName"
                            app:layout_constraintLeft_toRightOf="@id/detailUserVip"
                            app:layout_constraintTop_toTopOf="@id/detailUserName">


                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/matchAimIv"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="data_want_heart.json"
                                app:lottie_imageAssetsFolder="images_want_heart/"
                                app:lottie_loop="false" />

                            <TextView
                                android:id="@+id/detailUserIntention"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:text="一起运动"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp"
                                android:visibility="visible" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/detailUserVerify"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/gradient_blue_11dp"
                            android:drawableLeft="@drawable/icon_gender_woman_detail"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="认证用户,所见即所得"
                            android:textColor="#ffffffff"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="@id/detailUserName"
                            app:layout_constraintTop_toBottomOf="@id/detailUserName" />


                        <TextView
                            android:id="@+id/detailUserGenderAndAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/rectangle_rosepink_9dp"
                            android:drawableLeft="@drawable/icon_gender_girl_detail"
                            android:drawablePadding="2dp"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingTop="2dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="2dp"
                            android:textColor="#ffffffff"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toRightOf="@id/detailUserVerify"
                            app:layout_constraintTop_toBottomOf="@id/detailUserName"
                            tools:text="18岁" />

                        <TextView
                            android:id="@+id/detailUserDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/shape_rectangle_blue_9dp"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingTop="2dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="2dp"
                            android:textColor="#ffffffff"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/detailUserGenderAndAge"
                            app:layout_constraintLeft_toRightOf="@id/detailUserGenderAndAge"
                            app:layout_constraintTop_toTopOf="@id/detailUserGenderAndAge"
                            tools:text="10KM" />

                        <TextView
                            android:id="@+id/detailUserOnline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/shape_rectangle_green_9dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical|left"
                            android:maxLines="1"
                            android:paddingLeft="8dp"
                            android:paddingTop="2dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="2dp"
                            android:textColor="#ffffffff"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/detailUserGenderAndAge"
                            app:layout_constraintLeft_toRightOf="@id/detailUserDistance"
                            app:layout_constraintTop_toTopOf="@id/detailUserGenderAndAge"
                            tools:text="十分钟前在线" />


                        <com.ctetin.expandabletextviewlibrary.ExpandableTextView
                            android:id="@+id/detailUserSign"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:ellipsize="end"
                            android:lineSpacingMultiplier="1.1"
                            android:textColor="#FF696E73"
                            android:textSize="15sp"
                            app:ep_contract_color="@color/colorBlueSky1"
                            app:ep_contract_text="收起"
                            app:ep_expand_color="@color/colorBlueSky1"
                            app:ep_expand_text="   展开"
                            app:ep_max_line="3"
                            app:ep_need_always_showright="true"
                            app:ep_need_animation="true"
                            app:ep_need_contract="true"
                            app:ep_need_expand="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/detailUserName"
                            app:layout_constraintTop_toBottomOf="@id/detailUserGenderAndAge"
                            tools:text="从 2015 年 4 月起，Ant Design 在蚂蚁金服中后台产品线迅速推广，对接多条业务线，覆盖系统 800 个以上。定位于中台业务的 Ant Design 兼顾专业和非专业的设计人员，具有学习成本低、上手速度快、实现效果好等特点，并且提供从界面设计到前端开发的全链路生态，可以大大提升设计和开发的效率。" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/detailUserInformationRv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="8dp"
                            android:background="@color/colorWhite"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/detailUserSign" />

                        <TextView
                            android:id="@+id/tag1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23dp"
                            android:text="兴趣特质"
                            android:textColor="#ff191919"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="@id/detailUserName"
                            app:layout_constraintTop_toBottomOf="@id/detailUserInformationRv" />

                        <TextView
                            android:id="@+id/notifyAddTagBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="希望Ta添加"
                            android:textColor="#ff789eff"
                            android:textSize="14sp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/tag1"
                            app:layout_constraintRight_toRightOf="@id/detailUserSign"
                            app:layout_constraintTop_toTopOf="@id/tag1" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/detailRvTag"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:nestedScrollingEnabled="false"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tag1" />


                        <TextView
                            android:id="@+id/gift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="礼物墙"
                            android:textColor="#ff191919"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="@id/detailUserName"
                            app:layout_constraintTop_toBottomOf="@id/detailRvTag" />

                        <TextView
                            android:id="@+id/giftAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:drawableRight="@drawable/icon_more_right_gray"
                            android:text="查看全部"
                            android:textColor="#ffa5a5a5"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/gift"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/gift" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvGift"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:nestedScrollingEnabled="false"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/gift" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center_vertical"
                            android:text="动态"
                            android:textColor="#ff191919"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rvGift" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.scwang.smartrefresh.layout.SmartRefreshLayout
                        android:id="@+id/refreshListSquare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clUserInfo"
                        app:srlEnableLoadMore="true"
                        app:srlEnableLoadMoreWhenContentNotFull="true"
                        app:srlEnableRefresh="false">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/listSquareRv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="8dp"
                            android:nestedScrollingEnabled="true"
                            android:overScrollMode="never"
                            android:scrollbars="none" />
                    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="97dp"
                        android:background="@drawable/icon_cover_bg_detail"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/refreshListSquare" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.sdy.jitangapplication.widgets.HeadZoomScrollView>


            <RelativeLayout
                android:id="@+id/detailActionbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:alpha="0"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_collapseMode="pin">

                <ImageView
                    android:id="@+id/btnBack2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/icon_return" />

                <TextView
                    android:id="@+id/titleUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="用户名"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/moreBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/icon_more_black" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_gravity="bottom"
                android:background="@drawable/icon_cover_bg_detail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/refreshListSquare" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/contactCl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_green_27dp"
                    android:drawableLeft="@drawable/icon_wechat_detail"
                    android:gravity="center"
                    android:paddingLeft="36dp"
                    android:paddingTop="15dp"
                    android:paddingRight="36dp"
                    android:paddingBottom="15dp"
                    android:text="联系方式"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/detailUserChatBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_rectangle_orange_27dp"
                    android:drawableLeft="@drawable/icon_chat_detail"
                    android:gravity="center"
                    android:paddingLeft="36dp"
                    android:paddingTop="15dp"
                    android:paddingRight="36dp"
                    android:paddingBottom="15dp"
                    android:text="私聊"
                    android:textColor="#ffffffff"
                    android:textSize="16sp" />

            </LinearLayout>
        </FrameLayout>


    </com.kennyc.view.MultiStateView>

    <LinearLayout
        android:id="@+id/llBlackContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/backBtn1"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="center"
            android:src="@drawable/icon_return"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:src="@drawable/icon_sad_blacklist" />

        <TextView
            android:id="@+id/blackContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="33dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="你已将对方拉黑，拉黑状态下，双方均不可查看对方主页，取消拉黑可恢复好友权益"
            android:textColor="#ff999999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cancelBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="72dp"
            android:background="@drawable/shape_rectangle_orange_24dp"
            android:text="取消拉黑"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</FrameLayout>