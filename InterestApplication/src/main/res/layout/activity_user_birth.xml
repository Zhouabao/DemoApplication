<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ver="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:id="@+id/rootView"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        tools:context=".ui.activity.UserBirthActivity">


    <ImageView
            android:id="@+id/btnBack"
            style="@style/BckBtnStyle"
            android:visibility="gone"
            />

    <TextView
            android:id="@+id/help"
            android:text="帮助"
            android:textColor="#ffb2b2b2"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:padding="20dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    <TextView
            android:id="@+id/tv1"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="你的生日是哪天？"
            android:textColor="#ff262626"
            android:textSize="27sp"
            android:textStyle="bold"
            />

    <TextView
            android:id="@+id/userCollesationNotify"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack4C"
            android:textSize="17sp"
            android:layout_marginTop="9dp"
            android:text="让我看看好看的人都是什么星座？"
            />


    <LinearLayout
            android:id="@+id/birthRootView"
            android:layout_marginTop="85dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <com.sdy.jitangapplication.widgets.VerificationCodeInput
                android:id="@+id/userBirthYear"
                android:visibility="visible"
                android:layout_width="145dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                app:box="4"
                app:child_h_padding="5dp"
                app:etTextSize="20sp"
                app:child_hint="年"
                app:child_v_padding="3dp"
                app:autoShowInputBoard="true"
                app:child_width="30dp"
                app:inputType="number"/>

        <com.sdy.jitangapplication.widgets.VerificationCodeInput
                android:id="@+id/userBirthMonth"
                android:visibility="visible"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginLeft="19dp"
                app:box="2"
                app:etTextSize="20sp"

                app:child_h_padding="5dp"
                app:child_hint="月"
                app:child_v_padding="3dp"
                app:child_width="30dp"
                app:inputType="number"/>

        <com.sdy.jitangapplication.widgets.VerificationCodeInput
                android:id="@+id/userBirthDay"
                android:visibility="visible"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginLeft="19dp"
                app:box="2"
                app:child_h_padding="5dp"
                app:child_hint="日"
                app:etTextSize="20sp"
                app:child_v_padding="3dp"
                app:child_width="30dp"
                app:inputType="number"/>
    </LinearLayout>


    <TextView
            android:id="@+id/btnNextStep"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginTop="79dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/selector_confirm_btn1"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffffff"
            android:enabled="false"
            android:textSize="17sp"
            android:textStyle="bold"
            />

</LinearLayout>