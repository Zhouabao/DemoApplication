<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        tools:context=".ui.activity.UserBirthActivity">

    <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_return"
            android:scaleType="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/t0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="输入生日"
            android:textColor="@color/colorBlackTitle"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/birthRootView"
            app:layout_constraintTop_toBottomOf="@id/t0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/userAge"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/userBirthYear"
                android:text="年份"
                android:id="@+id/t1"
                android:textColor="@color/colorBlackTitle"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.example.demoapplication.widgets.VerificationView
                android:id="@+id/userBirthYear"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/t1"
                android:layout_width="200dp"
                app:vTextCount="4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:vTextSize="16sp"
                app:vAutoShowInputBoard="true"
                app:vTextColor="@color/colorBlack"
                app:vIsTextBold="true"
                app:vBackgroundResource="@drawable/verify_code_bg"
                android:layout_height="46dp"/>


        <TextView
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/userBirthYear"
                app:layout_constraintLeft_toLeftOf="@id/userBirthMonth"
                android:text="月"
                android:id="@+id/t2"
                android:textColor="@color/colorBlackTitle"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/userBirthYear"
                app:layout_constraintLeft_toRightOf="@id/t2"
                android:text="日"
                android:layout_marginLeft="84dp"
                android:textColor="@color/colorBlackTitle"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.example.demoapplication.widgets.VerificationView
                android:id="@+id/userBirthMonth"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/t2"
                android:layout_width="200dp"
                app:vTextCount="4"
                app:vIsTextBold="true"
                app:vTextSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:vTextColor="@color/colorBlack"
                app:vBackgroundResource="@drawable/verify_code_bg"
                android:layout_height="46dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
            app:layout_constraintTop_toTopOf="@id/birthRootView"
            android:id="@+id/userAge"
            app:layout_constraintLeft_toRightOf="@id/birthRootView"
            android:layout_width="67dp"
            android:visibility="gone"
            tools:text="24"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/orange_bg_rectangle"
            android:layout_height="46dp"
            android:layout_marginTop="40dp"/>

    <TextView
            android:visibility="gone"
            android:id="@+id/userXingzuo"
            app:layout_constraintLeft_toRightOf="@id/birthRootView"
            android:layout_width="67dp"
            tools:text="狮子座"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/userAge"
            android:background="@drawable/orange_bg_rectangle"
            android:layout_height="46dp"
            app:layout_constraintBottom_toBottomOf="@id/birthRootView"
            />

    <Button
            android:id="@+id/confirmBtn"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/selector_confirm_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>