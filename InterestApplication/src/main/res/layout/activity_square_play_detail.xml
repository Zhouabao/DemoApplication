<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/colorBlack"
        tools:context=".ui.activity.SquarePlayListDetailActivity">

    <FrameLayout
            android:id="@+id/videoFl"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.example.demoapplication.switchplay.SwitchVideo
                android:id="@+id/detailPlayVideo"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"/>

        <include
                android:id="@+id/videoCover"
                layout="@layout/item_square_detail_play_cover"/>

    </FrameLayout>

    <ImageView
            android:id="@+id/btnBack"
            android:scaleType="center"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingBottom="20dp"
            android:src="@drawable/icon_back_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />



</androidx.constraintlayout.widget.ConstraintLayout>