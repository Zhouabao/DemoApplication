<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >

    <TextView
            android:id="@+id/likeDate"
            android:text="2019.08.01"
            android:textColor="#ff333333"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="3 人对你感兴趣"
            android:textColor="#ff9b9b9b"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/likeDate"
            app:layout_constraintTop_toBottomOf="@id/likeDate"
            />

    <View
            android:id="@+id/likeNew"
            android:layout_marginLeft="2dp"
            android:background="@drawable/shape_oval_orange"
            android:layout_width="5dp"
            android:layout_height="5dp"
            app:layout_constraintLeft_toRightOf="@id/likeDate"
            app:layout_constraintTop_toTopOf="@id/likeDate"/>
</androidx.constraintlayout.widget.ConstraintLayout>
