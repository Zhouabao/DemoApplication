<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.ChangeAccountActivity">

    <include layout="@layout/layout_actionbar"/>

    <TextView
            android:id="@+id/countryCodeTv"
            android:text="+86"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:drawablePadding="4dp"
            android:paddingRight="4dp"
            android:drawableRight="@drawable/icon_popup_down"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llTitle"/>

    <EditText
            android:id="@+id/newPhoneEt"
            android:hint="@string/input_new_phone"
            android:textColorHint="#ffd1d2d5"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLength="11"
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="23dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/countryCodeTv"
            app:layout_constraintLeft_toRightOf="@id/countryCodeTv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/countryCodeTv"/>

    <View
            android:background="@color/colorDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/countryCodeTv"/>

    <TextView
            android:id="@+id/t2"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="@string/verify_code"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/countryCodeTv"
            app:layout_constraintTop_toBottomOf="@id/countryCodeTv"
            />


    <EditText
            android:id="@+id/newVerifyCodeEt"
            android:hint="@string/input_verify_code"
            android:textColorHint="#ffd1d2d5"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLength="4"
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/t2"
            app:layout_constraintLeft_toRightOf="@id/t2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/t2"/>

    <Button
            android:id="@+id/verifycodeBtn"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_verify"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/get_verify_code"
            android:textSize="13sp"
            android:enabled="false"
            android:textColor="@color/verify_btn_color_selector"
            app:layout_constraintBottom_toBottomOf="@id/t2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/t2"/>


    <TextView
            android:id="@+id/confirmChangeBtn"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:text="@string/account_confirm_change"
            android:background="@drawable/selector_confirm_btn"
            android:layout_marginTop="117dp"
            android:gravity="center"
            android:enabled="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/countryCodeTv"
            app:layout_constraintRight_toRightOf="@id/newPhoneEt"
            app:layout_constraintTop_toBottomOf="@id/t2"
            />

    <TextView
            android:id="@+id/loginOff"
            android:layout_marginBottom="34dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/account_login_offtip1"
            android:gravity="center"
            android:textColor="#ffbec2c2"
            android:textSize="13sp"
            android:lineSpacingMultiplier="1.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/countryCodeTv"
            app:layout_constraintRight_toRightOf="@id/newPhoneEt"
            />

</androidx.constraintlayout.widget.ConstraintLayout>