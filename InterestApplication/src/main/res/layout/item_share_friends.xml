<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shareFriendsAvator"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_share_friends_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shareFriendsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="邀请助力"
        android:textColor="#ff888d92"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/shareFriendsAvator"
        app:layout_constraintRight_toRightOf="@id/shareFriendsAvator"
        app:layout_constraintTop_toBottomOf="@id/shareFriendsAvator" />
</androidx.constraintlayout.widget.ConstraintLayout>