<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="147dp"
    android:layout_height="80dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/icon_shadow_detail_10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/infoIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:scaleType="center"
        android:src="@drawable/icon_detail_ami"
        app:layout_constraintBottom_toBottomOf="@id/infoContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/infoTitle" />

    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="身高"
        android:textColor="#ff888d92"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/infoIv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical|left"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="#FF191919"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/infoTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoTitle"
        tools:text="1999-07-15/天秤座" />


</androidx.constraintlayout.widget.ConstraintLayout>
