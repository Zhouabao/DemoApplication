<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_marginBottom="65dp"
            android:layout_marginTop="59dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle_black_login_out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.sdy.baselibrary.widgets.RoundImageView
                android:scaleType="centerCrop"
                android:src="@drawable/icon_guide_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:borderRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:type="round"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guideCl"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <View
                    android:id="@+id/dash_horizontal"
                    android:background="@drawable/shape_dash_line_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layerType="software"
                    android:layout_marginBottom="180dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            <View
                    android:layerType="software"
                    android:background="@drawable/shape_dash_line_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/dash_horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <View
                    android:id="@+id/view_guide_center"
                    android:background="@color/transparent"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/guideLast"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/dash_horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@id/view_guide_center"
                    app:layout_constraintTop_toTopOf="parent">

                <View
                        android:id="@+id/last"
                        android:alpha="0.4"
                        android:layout_width="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_oval_orange"
                        android:layout_height="16dp"
                        android:layout_marginLeft="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                        android:id="@+id/lastIv"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_guide_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/last"
                        />

                <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击上一张"
                        android:textColor="#ffffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lastIv"
                        />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/guideNext"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/dash_horizontal"
                    app:layout_constraintLeft_toLeftOf="@id/view_guide_center"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <View
                        android:id="@+id/next"
                        android:layout_width="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_oval_orange"
                        android:layout_height="16dp"
                        android:alpha="0.4"
                        android:layout_marginRight="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                        android:id="@+id/nextIv"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_guide_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/next"
                        />

                <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击下一张"
                        android:textColor="#ffffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/nextIv"
                        />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/guideDetail"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@id/view_guide_bottom"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal">

                <View
                        android:id="@+id/detail"
                        android:alpha="0.4"
                        android:layout_width="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_oval_orange"
                        android:layout_height="16dp"
                        app:layout_constraintBottom_toBottomOf="@id/view_detail"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                <ImageView
                        android:id="@+id/detailIv"
                        android:src="@drawable/icon_guide_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/detail"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击查看用户详情"
                        android:textColor="#ffffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detailIv"
                        />

                <View
                        android:id="@+id/view_detail"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                    android:id="@+id/view1"
                    android:alpha="0.3"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="10dp"
                    android:background="#D8D8D8"
                    android:layout_width="134dp"
                    android:layout_height="23dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal"/>

            <View
                    android:id="@+id/view2"
                    android:alpha="0.3"
                    android:background="#D8D8D8"
                    android:layout_width="196dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="@id/view1"
                    app:layout_constraintTop_toBottomOf="@id/view1"/>

            <View
                    android:id="@+id/view3"
                    android:alpha="0.3"
                    android:background="@drawable/rectangle_white_10dp"
                    android:layout_width="0dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="26dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/view1"
                    app:layout_constraintTop_toBottomOf="@id/view2"/>


            <View
                    android:id="@+id/dash_vertical_bottom"
                    android:background="@drawable/shape_dash_line_vertical"
                    android:layout_width="180dp"
                    android:layout_height="0dp"
                    android:layerType="software"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal"
                    />


            <View
                    android:id="@+id/view_guide_bottom"
                    android:background="@color/transparent"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/dash_vertical_bottom"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal"/>


            <TextView
                    android:id="@+id/chatTv"
                    android:visibility="gone"
                    android:text="打招呼"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="9dp"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@drawable/icon_guide_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/btnChat"
                    app:layout_constraintRight_toLeftOf="@id/btnChat"
                    app:layout_constraintTop_toTopOf="@id/btnChat"
                    />


            <ImageView
                    android:id="@+id/btnChat"
                    android:src="@drawable/icon_flash"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/view3"
                    app:layout_constraintRight_toRightOf="@id/view3"
                    app:layout_constraintTop_toTopOf="@id/view3"
                    />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guideLike"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:background="@drawable/gradient_guide_like_bg"
                    android:layout_width="140dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_hi_guide"
                    android:layout_width="78dp"
                    android:layout_centerVertical="true"
                    android:layout_height="78dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:background="@color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


            <ImageView
                    android:src="@drawable/icon_guide_arrow_right"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintBottom_toTopOf="@id/guide_like_hand_right"
                    app:layout_constraintLeft_toLeftOf="@id/guide_like_hand_right"
                    app:layout_constraintRight_toRightOf="@id/guide_like_hand_right"/>

            <ImageView
                    android:id="@+id/guide_like_hand_right"
                    android:layout_marginBottom="32dp"
                    android:src="@drawable/icon_guide_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/t1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                    android:id="@+id/t1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="向右滑动打招呼"
                    android:textColor="#ffffffff"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guideDislike"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:background="@drawable/gradient_guide_dislike_bg"
                    android:layout_width="140dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_dislike_match"
                    android:layout_width="78dp"
                    android:layout_centerVertical="true"
                    android:layout_height="78dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


            <ImageView
                    android:src="@drawable/icon_guide_arrow_left"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    app:layout_constraintBottom_toTopOf="@id/guide_dislike_hand_left"
                    app:layout_constraintLeft_toLeftOf="@id/guide_dislike_hand_left"
                    app:layout_constraintRight_toRightOf="@id/guide_dislike_hand_left"/>

            <ImageView
                    android:id="@+id/guide_dislike_hand_left"
                    android:layout_marginBottom="32dp"
                    android:src="@drawable/icon_guide_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/t2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                    android:id="@+id/t2"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="向左滑动表示无好感"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/useCl"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            <ImageView
                    android:id="@+id/welldone"
                    android:src="@drawable/icon_well_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/startUse"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="做的好，开始使用吧"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/welldone"
                    />

            <TextView
                    android:id="@+id/startUse"
                    android:background="@drawable/orange_bg_rectangle"
                    android:layout_width="242dp"
                    android:layout_height="46dp"
                    android:gravity="center"
                    android:text="开启积糖之旅"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@id/onceAgain"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            <TextView
                    android:id="@+id/onceAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="没有看懂？再来一次"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/intentionMatchingCl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:layout_marginRight="56dp"
                android:src="@drawable/icon_matching_default_black"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/iv1"
                android:layout_marginRight="77dp"
                android:layout_marginTop="44dp"
                android:src="@drawable/icon_guide_arrow_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginTop="5dp"
                android:layout_marginRight="33dp"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:text="选择后将持续匹配跟你意向相同的用户"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv1"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


