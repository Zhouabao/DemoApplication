<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_marginBottom="43dp"
            android:layout_marginTop="106dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle_black_login_out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.sdy.baselibrary.widgets.RoundImageView
                android:scaleType="centerCrop"
                android:src="@drawable/icon_guide_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:borderRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:type="round"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guideCl"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <View
                    android:id="@+id/dash_horizontal"
                    android:background="@drawable/shape_dash_line_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layerType="software"
                    android:layout_marginBottom="150dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            <View
                    android:id="@+id/dash_vertical"
                    android:layerType="software"
                    android:background="@drawable/shape_dash_line_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/dash_horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <View
                    android:id="@+id/view_guide_center"
                    android:background="@color/transparent"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                    android:id="@+id/guideLast"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@id/dash_horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@id/view_guide_center"
                    app:layout_constraintTop_toTopOf="parent">


                <TextView
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/icon_guide_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击上一张"
                        android:textColor="#ffffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/guideNext"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/dash_horizontal"
                    app:layout_constraintLeft_toLeftOf="@id/view_guide_center"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <TextView
                        android:drawableTop="@drawable/icon_guide_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击下一张"
                        android:textColor="#ffffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        />
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/guideDetail"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@id/view_guide_bottom"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal">

                <TextView
                        android:drawableTop="@drawable/icon_guide_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击查看用户详情"
                        android:textColor="#ffffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        />
            </LinearLayout>


            <View
                    android:id="@+id/view1"
                    android:alpha="0.3"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="#D8D8D8"
                    android:layout_width="128dp"
                    android:layout_height="36dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal"/>

            <View
                    android:id="@+id/view2"
                    android:alpha="0.3"
                    android:background="#D8D8D8"
                    android:layout_width="201dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="@id/view1"
                    app:layout_constraintTop_toBottomOf="@id/view1"/>

            <View
                    android:alpha="0.3"
                    android:background="#D8D8D8"
                    android:layout_width="164dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="@id/view1"
                    app:layout_constraintTop_toBottomOf="@id/view2"/>

            <View
                    android:id="@+id/dash_vertical_bottom"
                    android:background="@drawable/shape_dash_line_vertical"
                    android:layout_width="162dp"
                    android:layout_height="0dp"
                    android:layerType="software"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal"
                    />


            <View
                    android:id="@+id/view_guide_bottom"
                    android:background="@color/transparent"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/dash_vertical_bottom"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/guideHi"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/view_guide_bottom"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dash_horizontal">


                <ImageView
                        android:id="@+id/btnChat"
                        android:src="@drawable/icon_flash"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                <TextView
                        android:id="@+id/tvLeftChatTime"
                        android:elevation="2dp"
                        android:textColor="@color/colorOrange"
                        android:background="@drawable/shape_rectangle_gray_white_15dp"
                        android:layout_width="20dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="3"
                        android:layout_height="20dp"
                        app:layout_constraintLeft_toLeftOf="@id/btnChat"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/btnChat"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="打招呼"
                        android:textColor="#ffffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        app:layout_constraintBottom_toTopOf="@id/tvLeftChatTime"
                        app:layout_constraintLeft_toLeftOf="@id/btnChat"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/useCl"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="做的好，开始使用吧"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/startUse"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            <TextView
                    android:id="@+id/startUse"
                    android:background="@drawable/orange_bg_rectangle"
                    android:layout_width="242dp"
                    android:layout_height="46dp"
                    android:gravity="center"
                    android:text="开启积糖之旅"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@id/onceAgain"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            <TextView
                    android:id="@+id/onceAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="没有看懂？再来一次"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>