<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/icon_guide_verify_me"
        app:layout_constraintBottom_toBottomOf="@id/cl1"
        app:layout_constraintLeft_toLeftOf="@id/cl1"
        app:layout_constraintRight_toRightOf="@id/cl1"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/cl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/iconGuideVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:text="完成认证可以增加曝光度！"
            android:textColor="#fff17413"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/okBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_rectangle_orange_white_16dp"
            android:paddingLeft="11dp"
            android:paddingTop="5dp"
            android:layout_gravity="center_vertical"
            android:paddingRight="11dp"
            android:paddingBottom="5dp"
            android:text="好的"
            android:textColor="#fff17413"
            android:textSize="13sp" />
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:src="@drawable/icon_tranangle_guide_verify_mw"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl1" />

</androidx.constraintlayout.widget.ConstraintLayout>