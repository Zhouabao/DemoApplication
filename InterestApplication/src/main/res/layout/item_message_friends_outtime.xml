<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_gravity="center_vertical"
        android:background="@color/colorWhite"
        android:layout_width="73dp"
        android:layout_height="73dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/outtimeAvator"
            android:layout_width="57dp"
            android:layout_height="57dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hiAvatorMask"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:visibility="visible"
            android:background="@drawable/shape_oval_gray_3300"
            app:layout_constraintBottom_toBottomOf="@id/outtimeAvator"
            app:layout_constraintLeft_toLeftOf="@id/outtimeAvator"
            app:layout_constraintRight_toRightOf="@id/outtimeAvator"
            app:layout_constraintTop_toTopOf="@id/outtimeAvator"
            />

</androidx.constraintlayout.widget.ConstraintLayout>

