<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="false"
    tools:context=".ui.activity.FemalePowerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/powerBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_female_power_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewStatus"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:background="#FFFFDCC1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            layout="@layout/layout_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/viewStatus" />

        <TextView
            android:id="@+id/powerContact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableTop="@drawable/icon_female_contact_no"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/contact_picker_title"
            android:textColor="#ff191919"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/powerVerify"
            app:layout_constraintTop_toBottomOf="@id/powerBg" />

        <TextView
            android:id="@+id/changeContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/shape_rectangle_orange_white_12dp"
            android:gravity="center"
            android:minWidth="64dp"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:textColor="#ffff6318"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/powerContact"
            app:layout_constraintRight_toRightOf="@id/powerContact"
            app:layout_constraintTop_toBottomOf="@id/powerContact" />

        <TextView
            android:id="@+id/powerVerify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableTop="@drawable/icon_female_verify_no"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/real_verify"
            android:textColor="#ff191919"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/powerContact"
            app:layout_constraintRight_toLeftOf="@id/powerVideo"
            app:layout_constraintTop_toBottomOf="@id/powerBg" />


        <TextView
            android:id="@+id/changeVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/shape_rectangle_orange_white_12dp"
            android:gravity="center"
            android:minWidth="64dp"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:textColor="#ffff6318"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/powerVerify"
            app:layout_constraintRight_toRightOf="@id/powerVerify"
            app:layout_constraintTop_toBottomOf="@id/powerVerify" />


        <TextView
            android:id="@+id/powerVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableTop="@drawable/icon_female_video_no"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/video_introduce"
            android:textColor="#ff191919"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/powerVerify"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/powerBg" />


        <TextView
            android:id="@+id/changeVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/shape_rectangle_orange_white_12dp"
            android:gravity="center"
            android:minWidth="64dp"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:textColor="#ffff6318"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/powerVideo"
            app:layout_constraintRight_toRightOf="@id/powerVideo"
            app:layout_constraintTop_toBottomOf="@id/powerVideo" />


        <ImageView
            android:id="@+id/allPowerIv"
            android:layout_width="345dp"
            android:layout_height="279dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/changeContact" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>