<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@color/colorTransparent"
              android:layout_height="match_parent">


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_rectangle_gray_white_9dp"
            android:layout_height="wrap_content">


        <ImageView
                android:id="@+id/close"
                android:layout_marginTop="10dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/icon_close"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/title"
                android:text="积糖小调查"
                android:textColor="#ff000000"
                android:textSize="19sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/content"
                android:layout_marginTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="各位积糖体验官们，打扰你们10秒钟的时间，请告诉我你是在哪里看到积糖的呢？"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:lineSpacingMultiplier="1.4"
                />


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWay"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:visibility="visible"
                android:layout_marginTop="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <LinearLayout
                android:id="@+id/wayEditLl"
                android:visibility="gone"
                android:layout_marginTop="28dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="7dp"
                android:layout_height="wrap_content"
                >

            <View
                    android:layerType="software"
                    android:background="@drawable/shape_dash_line_black_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

            <EditText
                    android:id="@+id/wayEt"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"/>

            <View
                    android:layerType="software"
                    android:background="@drawable/shape_dash_line_black_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>
        </LinearLayout>

        <Button
                android:id="@+id/completeBtn"
                android:text="请选择"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:background="@drawable/selector_confirm_btn_25dp"
                android:enabled="false"
                android:layout_width="158dp"
                android:layout_height="38dp"
                android:visibility="visible"
                android:layout_marginBottom="26dp"
                android:layout_gravity="center"
                />


    </LinearLayout>
</LinearLayout>