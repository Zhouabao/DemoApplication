<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/nearPeoplePhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nearPeopleMorePhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_rectangle_bottom_10dpl"
        android:gravity="center"
        android:text="+2"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/nearPeoplePhoto"
        app:layout_constraintLeft_toLeftOf="@id/nearPeoplePhoto"
        app:layout_constraintRight_toRightOf="@id/nearPeoplePhoto"
        app:layout_constraintTop_toTopOf="@id/nearPeoplePhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>

