<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@color/colorTransparent"
              android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_rectangle_gray_white_9dp"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/slideOutClose"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/slideOutMax"
                android:layout_marginTop="15dp"
                android:background="@drawable/icon_score_max"
                android:layout_width="111dp"
                android:textColor="@color/colorOrange"
                android:text="180"
                android:paddingLeft="37dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="131dp"
                android:layout_marginRight="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/slideOutClose"/>

        <ImageView
                android:src="@drawable/icon_score_switch"
                android:layout_width="41dp"
                android:layout_height="22dp"
                app:layout_constraintBottom_toBottomOf="@id/slideOutMax"
                app:layout_constraintLeft_toRightOf="@id/slideOutMin"
                app:layout_constraintRight_toLeftOf="@id/slideOutMax"
                app:layout_constraintTop_toTopOf="@id/slideOutMax"/>

        <TextView
                android:id="@+id/slideOutMin"
                android:layout_marginLeft="30dp"
                android:background="@drawable/icon_score_min"
                android:layout_width="78dp"
                android:textColor="@color/colorOrange"
                android:text="80"
                android:gravity="center_vertical"
                android:paddingLeft="29dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_height="91dp"
                android:layout_marginRight="34dp"
                app:layout_constraintBottom_toBottomOf="@id/slideOutMax"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/slideOutMax"
                />

        <TextView
                android:id="@+id/harassmentTitle"
                android:layout_marginTop="15dp"
                android:text="获取更多配对机会"
                android:textStyle="bold"
                android:textColor="#131415"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/slideOutMax"/>

        <TextView
                android:id="@+id/slideOutContent"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:text="现在去完善资料免费右滑次数将从每天20次增至每天80次"
                android:textColor="#B6BABF"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:lineSpacingMultiplier="1.4"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/harassmentTitle"/>

        <TextView
                android:id="@+id/slideOutBtn"
                android:text="去完善"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:background="@drawable/shape_rectangle_enable_btn_15dp"
                android:layout_width="232dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/slideOutContent"/>


        <TextView
                android:id="@+id/gotoPurchase"
                android:text="直接购买"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/colorOrange"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/slideOutBtn"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>