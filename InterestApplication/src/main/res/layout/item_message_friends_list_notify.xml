<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:background="@color/colorWhite"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">


    <com.example.demoapplication.widgets.WaterRippleView
            android:id="@+id/nofitySensor"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleAutoRunning="true"
            app:rippleCenterIcon="@drawable/shape_rectangle_gray_57dp"
            app:rippleColor="@color/colorGradientRed"
            app:rippleCount="2"
            app:rippleSpacing="4dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nofityAvator"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:visibility="visible"
            android:src="@drawable/img_avatar_01"
            app:layout_constraintBottom_toBottomOf="@id/nofitySensor"
            app:layout_constraintLeft_toLeftOf="@id/nofitySensor"
            app:layout_constraintRight_toRightOf="@id/nofitySensor"
            app:layout_constraintTop_toTopOf="@id/nofitySensor"
            />

</androidx.constraintlayout.widget.ConstraintLayout>

