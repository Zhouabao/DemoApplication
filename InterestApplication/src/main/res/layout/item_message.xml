<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messageAvator"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_default_avator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="豆炎"
        android:textColor="#ff191919"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/messageAvator"
        app:layout_constraintTop_toTopOf="@id/messageAvator" />

    <TextView
        android:id="@+id/messgaeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="2020-02-28 13:06"
        android:textColor="#ff888d92"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/messageName" />

    <TextView
        android:id="@+id/messageContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="有点想要诶有小哥哥送我这个东西嘛"
        android:textColor="#ff888d92"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/messageName"
        app:layout_constraintRight_toRightOf="@id/messgaeTime"
        app:layout_constraintTop_toBottomOf="@id/messageName" />


</androidx.constraintlayout.widget.ConstraintLayout>