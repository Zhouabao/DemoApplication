<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@color/colorTransparent"
              android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_rectangle_gray_white_10dp"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/bg"
                android:src="@drawable/icon_bg_greet_limit"
                android:layout_width="wrap_content"
                android:layout_height="196dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
                android:id="@+id/close"
                android:src="@drawable/icon_close1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="right"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


        <TextView
                android:id="@+id/addToLabelTitle"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积糖杜绝低质量的交友\n
聊天需要会员可以开启"
                android:textColor="#ff191919"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bg"
                />

        <TextView
                android:id="@+id/addToLabelContent"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:text="建立高效交友私密圈，减少低素质、广告、口嗨人群的进入，将交友的机会留给会员用户，直接提高交友效率与质量"
                android:textColor="#B6BABF"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addToLabelTitle"
                />

        <TextView
                android:id="@+id/chargeBtn"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:background="@drawable/shape_rectangle_orange_25dp"
                android:layout_width="232dp"
                android:layout_height="40dp"
                android:text="成为会员"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addToLabelContent"
                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="马上开通，聊天会优先置顶到对方列表\n交友效率提升2倍"
                android:textColor="#ff191919"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chargeBtn"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>