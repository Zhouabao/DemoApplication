<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/textMessageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nim_message_view_bottom"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

    <ImageView
            android:id="@+id/buttonAudioMessage"
            android:layout_marginLeft="15dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignTop="@id/editTextMessage"
            android:layout_alignBottom="@id/editTextMessage"
            android:src="@drawable/nim_message_input_record"
            android:contentDescription="@string/empty"
            android:scaleType="center"/>

    <EditText
            android:id="@+id/editTextMessage"
            android:layout_toRightOf="@id/buttonAudioMessage"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorBlack4a"
            android:textColorHint="@color/colorBlackC9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="38dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:maxLines="4"
            android:hint="说点什么吧"
            android:layout_toLeftOf="@id/emoji_button"
            android:autoLink="web|email|phone"
            android:background="@drawable/shape_rectangle_white_24dp"
            android:textSize="16sp"/>


    <include
            layout="@layout/chat_nim_message_activity_actions_layout"
            android:visibility="gone"
            android:layout_below="@id/editTextMessage"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    <ImageView
            android:id="@+id/emoji_button"
            android:layout_alignTop="@id/editTextMessage"
            android:layout_alignBottom="@id/editTextMessage"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/sendLayout"
            android:src="@drawable/nim_message_input_emo"
            android:contentDescription="@string/empty"
            android:scaleType="center"/>

    <FrameLayout
            android:id="@+id/sendLayout"
            android:layout_alignTop="@id/editTextMessage"
            android:layout_alignBottom="@id/editTextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp">

        <ImageView
                android:id="@+id/buttonMoreFuntionInText"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:src="@drawable/nim_message_input_more_clickopen"
                android:contentDescription="@string/empty"
                android:scaleType="center"/>

        <ImageView
                android:id="@+id/buttonSendMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/selector_send_btn"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"/>
    </FrameLayout>
</RelativeLayout>