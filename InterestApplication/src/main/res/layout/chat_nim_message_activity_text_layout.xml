<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/textMessageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nim_message_view_bottom"
                android:paddingTop="5dp">


    <EditText
            android:id="@+id/editTextMessage"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorBlack4a"
            android:textColorHint="@color/colorBlackC9"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="20dp"
            android:hint="说点什么吧"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:autoLink="web|email|phone"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_rectangle_gray_25dp"
            android:textSize="16sp"/>


    <Button
            android:id="@+id/buttonSendMessage"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="6dp"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@id/editTextMessage"
            android:layout_alignRight="@id/editTextMessage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:enabled="false"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:layout_gravity="center"
            android:background="@drawable/selector_send_btn"
            android:gravity="center"
            />

    <include
            layout="@layout/chat_nim_message_activity_actions_layout"
            android:layout_below="@id/editTextMessage"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

</RelativeLayout>