<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textMessageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nim_message_view_bottom"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/buttonAudioMessage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/editTextMessage"
        android:layout_alignBottom="@id/editTextMessage"
        android:layout_marginLeft="15dp"
        android:contentDescription="@string/empty"
        android:scaleType="center"
        android:src="@drawable/icon_message_input_record" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/emoji_button"
        android:layout_toRightOf="@id/buttonAudioMessage"
        android:autoLink="web|email|phone"
        android:background="@drawable/shape_rectangle_white_24dp"
        android:gravity="center_vertical"
        android:hint="请输入消息"
        android:imeOptions="actionSend"
        android:minHeight="38dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/colorBlack4a"
        android:textColorHint="@color/colorBlackC9"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />


    <Button
        android:id="@+id/recordStateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/emoji_button"
        android:layout_toRightOf="@id/buttonAudioMessage"
        android:background="@drawable/shape_rectangle_white_24dp"
        android:gravity="center"
        android:minHeight="38dp"
        android:text="@string/record_audio"
        android:textColor="#ff191919"
        android:textSize="14sp"
        android:textStyle="bold" />

    <include
        layout="@layout/chat_nim_message_activity_actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMessage"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/emoji_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/editTextMessage"
        android:layout_alignBottom="@id/editTextMessage"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:contentDescription="@string/empty"
        android:scaleType="center"
        android:src="@drawable/icon_message_input_emo" />

    <FrameLayout
        android:id="@+id/sendLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editTextMessage"
        android:layout_alignBottom="@id/editTextMessage"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp">

        <ImageView
            android:id="@+id/buttonMoreFuntionInText"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:contentDescription="@string/empty"
            android:scaleType="center"
            android:src="@drawable/nim_message_input_more_clickopen"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/buttonSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_send_btn"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:id="@+id/approveView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/editTextMessage"
        android:layout_alignBottom="@id/editTextMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:visibility="gone" />
</RelativeLayout>