<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="#拍过毛孩子最丑的一张照片拍过毛孩子最丑的一张照片拍过毛孩子最丑的一张照片"
                android:textColor="#ff191919"
                android:textSize="15sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textFontWeight="800"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/titlePicRv"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTv"/>

        <View
                android:id="@+id/titlePicView"
                android:background="@color/colorTransparent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/titlePicRv"
                app:layout_constraintLeft_toLeftOf="@id/titlePicRv"
                app:layout_constraintRight_toRightOf="@id/titlePicRv"
                app:layout_constraintTop_toTopOf="@id/titlePicRv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
