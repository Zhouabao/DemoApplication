<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_rectangle_top_left_right_corners_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="分享到"
        android:textColor="#ff191919"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <HorizontalScrollView
        android:id="@+id/shareHsv"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transpondFriend"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="12dp"
                android:drawableTop="@drawable/icon_jitang"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/share_jitang_friend"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@id/transpondWebo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/transpondWechat"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/transpondWechat"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="30dp"
                android:drawableTop="@drawable/icon_wechat1"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/share_wechat_friend"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/transpondFriend"
                app:layout_constraintLeft_toRightOf="@id/transpondFriend"
                app:layout_constraintRight_toLeftOf="@id/transpondWechatZone"
                app:layout_constraintTop_toTopOf="@id/transpondFriend" />

            <TextView
                android:id="@+id/transpondWechatZone"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:drawableTop="@drawable/icon_pengyouquan"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/share_wechat_zone"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/transpondFriend"
                app:layout_constraintLeft_toRightOf="@id/transpondWechat"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/transpondFriend" />

            <TextView
                android:id="@+id/transpondWebo"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:drawableTop="@drawable/icon_weibo1"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/share_sina"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/transpondWechat"
                app:layout_constraintTop_toBottomOf="@id/transpondFriend" />

            <TextView
                android:id="@+id/transpondQQ"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:drawableTop="@drawable/icon_qq1"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/contact_QQ"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/transpondFriend"
                app:layout_constraintRight_toLeftOf="@id/transpondWechatZone"
                app:layout_constraintTop_toTopOf="@id/transpondWebo" />

            <TextView
                android:id="@+id/transpondQQZone"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:drawableTop="@drawable/icon_qq_zone1"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="QQ空间"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/transpondWechat"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/transpondWebo" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/shareHsvView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:visibility="visible"
        android:layout_marginBottom="15dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/collect"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:drawableTop="@drawable/icon_collect1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="@string/collect"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/report"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:drawableTop="@drawable/icon_report1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="@string/report"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:drawableTop="@drawable/icon_delete1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>