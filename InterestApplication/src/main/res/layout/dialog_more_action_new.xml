<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/shape_rectangle_top_left_right_corners_bg"
        android:layout_height="wrap_content">

    <HorizontalScrollView
            android:scrollbars="none"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/transpondFriend"
                    android:gravity="center"
                    android:drawableTop="@drawable/icon_jitang"
                    android:text="积糖好友"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/transpondWebo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/transpondWechat"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/transpondWechat"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/icon_wechat1"
                    android:text="微信好友"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/transpondFriend"
                    app:layout_constraintLeft_toRightOf="@id/transpondFriend"
                    app:layout_constraintRight_toLeftOf="@id/transpondWechatZone"
                    app:layout_constraintTop_toTopOf="@id/transpondFriend"/>

            <TextView
                    android:id="@+id/transpondWechatZone"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/icon_pengyouquan"
                    android:text="朋友圈"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/transpondFriend"
                    app:layout_constraintLeft_toRightOf="@id/transpondWechat"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/transpondFriend"/>

            <TextView
                    android:id="@+id/transpondWebo"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/icon_weibo1"
                    android:text="微博"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/transpondWechat"
                    app:layout_constraintTop_toBottomOf="@id/transpondFriend"/>

            <TextView
                    android:id="@+id/transpondQQ"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/icon_qq1"
                    android:text="QQ"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    app:layout_constraintLeft_toRightOf="@id/transpondFriend"
                    app:layout_constraintRight_toLeftOf="@id/transpondWechatZone"
                    app:layout_constraintTop_toTopOf="@id/transpondWebo"/>

            <TextView
                    android:id="@+id/transpondQQZone"
                    android:layout_marginRight="18dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/icon_qq_zone1"
                    android:text="QQ空间"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/transpondWechat"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/transpondWebo"/>
        </LinearLayout>
    </HorizontalScrollView>

    <View
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/colorDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <LinearLayout
            android:layout_marginBottom="26dp"
            android:orientation="horizontal"
            android:layout_marginLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/collect"
                android:gravity="center"
                android:drawableTop="@drawable/icon_collect1"
                android:text="收藏"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:drawablePadding="8dp"
                android:layout_marginRight="30dp"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/report"
                android:gravity="center"
                android:drawableTop="@drawable/icon_report1"
                android:text="举报"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:drawablePadding="8dp"
                android:layout_marginRight="30dp"
                android:layout_width="56dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/delete"
                android:gravity="center"
                android:drawableTop="@drawable/icon_delete1"
                android:text="删除"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:drawablePadding="8dp"
                android:layout_marginRight="30dp"
                android:layout_width="56dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                />

    </LinearLayout>


</LinearLayout>