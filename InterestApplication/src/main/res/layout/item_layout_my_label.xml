<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/labelIcon"
                    android:src="@drawable/default_image_10dp"
                    android:scaleType="centerCrop"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/labelName"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="篮球"
                    android:textColor="#ff191919"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@id/labelIcon"
                    app:layout_constraintTop_toTopOf="@id/labelIcon"
                    />

            <TextView
                    android:id="@+id/labelEdit"
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="编辑"
                    android:gravity="center"
                    android:textColor="#ff888d92"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/labelName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelName"
                    />


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/labelQualityRv"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_marginTop="10dp"
                    android:overScrollMode="never"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/labelName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelName"
                    />


            <ImageView
                    android:id="@+id/labelQualityAddBtn"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="11dp"
                    android:visibility="gone"
                    android:src="@drawable/icon_complete_label_ani"
                    app:layout_constraintLeft_toLeftOf="@id/labelName"
                    app:layout_constraintTop_toBottomOf="@id/labelName"
                    />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
            android:id="@+id/labelDelete"
            android:layout_gravity="right|center_vertical"
            android:visibility="visible"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:src="@drawable/icon_delete_my_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</FrameLayout>


