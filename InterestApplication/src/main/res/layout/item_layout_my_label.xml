<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/labelDelete"
            android:layout_gravity="left|center_vertical"
            android:visibility="visible"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:src="@drawable/icon_delete_my_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/content"
            android:background="@color/colorWhite"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/labelIcon"
                android:layout_marginLeft="15dp"
                android:src="@drawable/default_image_10dp"
                android:scaleType="centerCrop"
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/labelOuttime"
                android:visibility="gone"
                android:background="@drawable/rectangle_cover_bg40_10dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="已过期"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/labelIcon"
                app:layout_constraintLeft_toLeftOf="@id/labelIcon"
                app:layout_constraintRight_toRightOf="@id/labelIcon"
                app:layout_constraintTop_toTopOf="@id/labelIcon"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintBottom_toBottomOf="@id/labelIcon"
                app:layout_constraintLeft_toRightOf="@id/labelIcon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/labelIcon">

            <TextView
                    android:id="@+id/labelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="篮球"
                    android:textStyle="bold"
                    android:textColor="#ff191919"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <ImageView
                    android:id="@+id/labelEdit"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/icon_add_tag_light_gray"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelName"
                    />

            <TextView
                    android:visibility="gone"
                    android:id="@+id/labelPurchase"
                    android:layout_width="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_height="wrap_content"
                    android:text="立即续费"
                    android:gravity="center"
                    android:textColor="#ffff6318"
                    android:textSize="12sp"
                    android:background="@drawable/shape_rectangle_orange_white_12dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelName"
                    />


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/labelQualityRv"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:overScrollMode="never"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="@id/labelName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelName"
                    />

            <TextView
                    android:id="@+id/labelQualityAddBtn"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="#FF787C7F"
                    android:text="完善兴趣"
                    android:visibility="gone"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/icon_add_tag"
                    android:background="@drawable/shape_rectangle_gray_white_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/labelName"
                    app:layout_constraintTop_toBottomOf="@id/labelName"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
                android:layout_marginTop="15dp"
                android:background="@color/colorDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintLeft_toLeftOf="@id/cl1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelIcon"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>


