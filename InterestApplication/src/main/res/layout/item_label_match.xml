<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TextView
            android:id="@+id/labelTv"
            android:text="任天堂"
            android:textSize="17sp"
            android:textColor="#FFA1A1A1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/labelCheckIv"
            />

    <View
            android:id="@+id/labelCheckIv"
            android:background="@drawable/shape_rectangle_orange_11dp"
            app:layout_constraintRight_toRightOf="@id/labelTv"
            app:layout_constraintLeft_toLeftOf="@id/labelTv"
            app:layout_constraintTop_toBottomOf="@id/labelTv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="2dp"
            android:layout_width="16dp"
            android:layout_height="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
