<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackground"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:descendantFocusability="beforeDescendants"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

    <com.sdy.jitangapplication.widgets.NoScrollViewPager
            android:id="@+id/vpPhotos"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    <TextView
            android:id="@+id/lastImgBtn"
            android:layout_width="150dp"
            android:layout_marginBottom="150dp"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/nextImgBtn"
            android:layout_width="150dp"
            android:layout_gravity="right"
            android:layout_marginBottom="150dp"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:id="@+id/matchBothIntersetLl"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rectangle_cover_bg_12dp"
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/matchBothIntersetIv"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_cuohe_tag"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

        <TextView
                android:id="@+id/matchBothIntersetContent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="她也喜欢【蹦迪】"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/v1"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:paddingBottom="26dp"
            android:background="@drawable/gradient_match_user_bg"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/matchAim"
                android:background="@drawable/shape_rectangle_blue"
                android:layout_marginTop="10dp"
                android:paddingLeft="1dp"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:paddingBottom="1dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/matchAimIv"
                    android:layout_width="23dp"
                    android:src="@drawable/icon_match_aim"
                    android:layout_height="23dp"/>

            <TextView
                    android:id="@+id/matchAimTv"
                    android:text="找人一起玩"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>


        <TextView
                android:id="@+id/matchUserName"
                android:layout_marginTop="6dp"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/matchAim"
                tools:text="Username"/>

        <ImageView
                android:id="@+id/ivVip"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_vip"
                android:layout_width="25dp"
                android:scaleType="centerInside"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="@id/matchUserName"
                app:layout_constraintLeft_toRightOf="@id/matchUserName"
                app:layout_constraintTop_toTopOf="@id/matchUserName"
                />

        <ImageView
                android:id="@+id/ivVerify"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_verify_pass"
                android:layout_width="25dp"
                android:scaleType="centerInside"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="@id/matchUserName"
                app:layout_constraintLeft_toRightOf="@id/ivVip"
                app:layout_constraintTop_toTopOf="@id/matchUserName"
                />


        <TextView
                android:id="@+id/matchUserAge"
                android:gravity="center"
                android:textSize="14sp"
                android:drawablePadding="3dp"
                android:textColor="#FFCBC7C5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_match_age"
                app:layout_constraintLeft_toLeftOf="@id/matchUserName"
                app:layout_constraintTop_toBottomOf="@id/matchUserName"
                tools:text="23"/>

        <TextView
                android:id="@+id/matchUserConstellation"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFCBC7C5"
                android:drawableLeft="@drawable/icon_collapstation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                app:layout_constraintLeft_toRightOf="@id/matchUserAge"
                app:layout_constraintTop_toTopOf="@id/matchUserAge"
                tools:text="金牛座"/>

        <TextView
                android:id="@+id/matchUserDistance"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFCBC7C5"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/icon_map_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/matchUserConstellation"
                app:layout_constraintTop_toTopOf="@id/matchUserAge"
                tools:text="10KM"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/matchUserLocalTagCl"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectangle_white_15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/matchUserAge">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/matchUserLocalTagCharacter"
                    android:overScrollMode="never"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:minHeight="26dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/btnHiView"
                    app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                    android:id="@+id/matchUserLocalTagContent"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="#FF191919"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:maxLines="3"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/btnHiView"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="手游端游主机都玩，但时间紧主手游目前常驻fgo偶尔明日方舟剑乱舞，PC只玩steam上的，是个以撒狂个以，是个以撒狂个以是个以撒狂个以是个以撒狂个以"
                    />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/matchUserDynamicThumbRv"
                    android:layout_width="0dp"
                    android:layout_height="57dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/btnHiView"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <View
                    android:id="@+id/btnHiView"
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnHi"
                android:background="@drawable/icon_oval_orange_hi_bg"
                android:layout_width="51dp"
                android:visibility="visible"
                android:layout_height="51dp"
                app:layout_constraintBottom_toBottomOf="@id/matchUserLocalTagCl"
                app:layout_constraintLeft_toLeftOf="@id/btnHiLottieView"
                app:layout_constraintRight_toRightOf="@id/btnHiLottieView"
                app:layout_constraintTop_toTopOf="@id/matchUserLocalTagCl">

            <ImageView
                    android:id="@+id/btnHiIv"
                    android:src="@drawable/icon_hi_no_bg"
                    android:alpha="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <TextView
                    android:id="@+id/btnHiLeftTime"
                    android:alpha="0"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:textSize="26sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btnHiLottieView"
                android:layout_width="53dp"
                android:layout_height="117dp"
                android:layout_marginRight="17dp"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/btnHi"
                app:layout_constraintRight_toRightOf="parent"
                app:lottie_autoPlay="false"
                app:lottie_fileName="data_greet.json"
                app:lottie_imageAssetsFolder="images_hi/"
                app:lottie_loop="false"
                app:lottie_speed="1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:id="@+id/vpIndicator"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"/>
</androidx.cardview.widget.CardView>