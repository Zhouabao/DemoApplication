<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="?attr/selectableItemBackground"
    android:descendantFocusability="beforeDescendants"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="15dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <com.sdy.jitangapplication.widgets.NoScrollViewPager
        android:id="@+id/vpPhotos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />


    <TextView
        android:id="@+id/lastImgBtn"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp" />

    <TextView
        android:id="@+id/nextImgBtn"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="150dp" />

    <LinearLayout
        android:id="@+id/matchBothIntersetLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_cover_bg_12dp"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageView
            android:id="@+id/matchBothIntersetIv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_cuohe_tag" />

        <TextView
            android:id="@+id/matchBothIntersetContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            tools:text="她也喜欢【蹦迪】" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/gradient_match_user_bg"
        android:paddingBottom="26dp">

        <LinearLayout
            android:id="@+id/matchAim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rectangle_blue"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingRight="6dp"
            android:paddingBottom="1dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/matchAimIv"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/icon_match_aim" />

            <TextView
                android:id="@+id/matchAimTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="找人一起玩"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


        <TextView
            android:id="@+id/matchUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/matchAim"
            tools:text="Username" />

        <ImageView
            android:id="@+id/ivVip"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_vip"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/matchUserName"
            app:layout_constraintLeft_toRightOf="@id/matchUserName"
            app:layout_constraintTop_toTopOf="@id/matchUserName" />

        <ImageView
            android:id="@+id/ivVerify"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_verify_pass"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/matchUserName"
            app:layout_constraintLeft_toRightOf="@id/ivVip"
            app:layout_constraintTop_toTopOf="@id/matchUserName" />


        <TextView
            android:id="@+id/matchUserAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_gender_woman_gray"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:textColor="#FFEEEEEE"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/matchUserName"
            app:layout_constraintTop_toBottomOf="@id/matchUserName"
            tools:text="23" />

        <TextView
            android:id="@+id/matchUserConstellation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/icon_collapstation"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:textColor="#FFEEEEEE"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/matchUserAge"
            app:layout_constraintTop_toTopOf="@id/matchUserAge"
            tools:text="金牛座" />

        <TextView
            android:id="@+id/matchUserDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/icon_map_gray"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:textColor="#FFEEEEEE"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/matchUserConstellation"
            app:layout_constraintTop_toTopOf="@id/matchUserAge"
            tools:text="10KM" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/matchUserLocalTagCl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_white_15dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/matchUserAge">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/matchUserLocalTagCharacter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:minHeight="26dp"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnHiView"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/matchUserLocalTagContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:padding="5dp"
                android:textColor="#FF191919"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnHiView"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="手游端游主机都玩，但时间紧主手游目前常驻fgo偶尔明日方舟剑乱舞，PC只玩steam上的，是个以撒狂个以，是个以撒狂个以是个以撒狂个以是个以撒狂个以" />

            <LinearLayout
                android:id="@+id/matchUserDynamicThumbLl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnHiView"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/matchUserDynamicThumbTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="她发布的动态"
                    android:textColor="#ff191919"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/matchUserDynamicThumbRv"
                    android:layout_width="wrap_content"
                    android:layout_height="57dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:visibility="visible" />
            </LinearLayout>


            <View
                android:id="@+id/btnHiView"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnHi"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:background="@drawable/icon_oval_orange_hi_bg"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/matchUserLocalTagCl"
            app:layout_constraintLeft_toLeftOf="@id/btnHiLottieView"
            app:layout_constraintRight_toRightOf="@id/btnHiLottieView"
            app:layout_constraintTop_toTopOf="@id/matchUserLocalTagCl">

            <ImageView
                android:id="@+id/btnHiIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:src="@drawable/icon_hi_no_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btnHiLeftTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:text="0"
                android:textColor="#ffffffff"
                android:textSize="26sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/btnHiLottieView"
            android:layout_width="53dp"
            android:layout_height="117dp"
            android:layout_marginRight="17dp"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/btnHi"
            app:layout_constraintRight_toRightOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_fileName="data_greet.json"
            app:lottie_imageAssetsFolder="images_hi/"
            app:lottie_loop="true"
            app:lottie_speed="1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/vpIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" />
</androidx.cardview.widget.CardView>