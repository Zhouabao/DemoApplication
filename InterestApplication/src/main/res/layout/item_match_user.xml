<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackground"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:descendantFocusability="beforeDescendants"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

    <com.sdy.jitangapplication.widgets.NoScrollViewPager
            android:id="@+id/vpPhotos"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    <TextView
            android:id="@+id/lastImgBtn"
            android:layout_width="150dp"
            android:layout_marginBottom="150dp"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/nextImgBtn"
            android:layout_width="150dp"
            android:layout_gravity="right"
            android:layout_marginBottom="150dp"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:id="@+id/matchBothIntersetLl"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rectangle_cover_bg_12dp"
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/matchBothIntersetIv"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_cuohe_tag"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

        <TextView
                android:id="@+id/matchBothIntersetContent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="她也喜欢【蹦迪】"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/v1"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:paddingBottom="26dp"
            android:paddingRight="71dp"
            android:background="@drawable/gradient_match_user_bg"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/matchAim"
                android:text="找人一起玩"
                android:textColor="@color/colorWhite"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:paddingRight="6dp"
                android:paddingBottom="3dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/icon_match_aim"
                android:background="@drawable/shape_rectangle_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toTopOf="@id/matchUserName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <TextView
                android:id="@+id/matchUserName"
                android:layout_marginTop="6dp"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/matchAim"
                tools:text="Username"/>

        <ImageView
                android:id="@+id/ivVip"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_vip"
                android:layout_width="25dp"
                android:scaleType="centerInside"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="@id/matchUserName"
                app:layout_constraintLeft_toRightOf="@id/matchUserName"
                app:layout_constraintTop_toTopOf="@id/matchUserName"
                />

        <ImageView
                android:id="@+id/ivVerify"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_verify_pass"
                android:layout_width="25dp"
                android:scaleType="centerInside"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="@id/matchUserName"
                app:layout_constraintLeft_toRightOf="@id/ivVip"
                app:layout_constraintTop_toTopOf="@id/matchUserName"
                />


        <TextView
                android:id="@+id/matchUserAge"
                android:gravity="center"
                android:textSize="14sp"
                android:drawablePadding="3dp"
                android:textColor="#FFCBC7C5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_match_age"
                app:layout_constraintLeft_toLeftOf="@id/matchUserName"
                app:layout_constraintTop_toBottomOf="@id/matchUserName"
                tools:text="23"/>

        <TextView
                android:id="@+id/matchUserConstellation"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFCBC7C5"
                android:drawableLeft="@drawable/icon_collapstation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                app:layout_constraintLeft_toRightOf="@id/matchUserAge"
                app:layout_constraintTop_toTopOf="@id/matchUserAge"
                tools:text="金牛座"/>

        <TextView
                android:id="@+id/matchUserDistance"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFCBC7C5"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/icon_map_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/matchUserConstellation"
                app:layout_constraintTop_toTopOf="@id/matchUserAge"
                tools:text="10KM"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/matchUserLocalTagCl"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/matchUserName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/matchUserAge">


            <TextView
                    android:id="@+id/matchUserLocalTagContent"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:background="@drawable/rectangle_cover_bg_10dp"
                    android:padding="5dp"
                    android:textColor="#FFF8F8F8"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="手游端游主机都玩，但时间紧主手游目前常驻fgo偶尔明日方舟剑乱舞，PC只玩steam上的，是个以撒狂个以，是个以撒狂个以是个以撒狂个以是个以撒狂个以"
                    />


            <LinearLayout
                    android:id="@+id/matchUserLocalTagCharacterLl"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/rectangle_label_25_orange_7dp"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/matchUserLocalTagContent"
                   >
                <TextView
                        android:id="@+id/matchUserLocalTagName"
                        tools:text="游戏"
                        android:gravity="center"
                        android:paddingRight="9dp"
                        android:paddingLeft="9dp"
                        android:textColor="#ffffffff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:background="@drawable/rectangle_label_orange_7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/matchUserLocalTagCharacter"
                        android:overScrollMode="never"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
                android:id="@+id/matchUserDynamicLl"
                android:background="@drawable/rectangle_cover_bg_10dp"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/matchUserName"
                app:layout_constraintTop_toBottomOf="@id/matchUserAge">


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/matchUserDynamicThumbRv"
                    android:layout_width="wrap_content"
                    android:layout_height="57dp"
                    android:orientation="horizontal"
                    />
        </LinearLayout>


        <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/matchUserName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/matchUserAge">

            <TextView
                    android:background="@drawable/rectangle_cover_bg_10dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="#FFF8F8F8"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.25"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    tools:text="AntV 是蚂蚁金服全新代数据可视化解决方案，致力于提供一套…单方便、专业可靠、无限可能的数据可视化最佳实践。"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
            android:id="@+id/vpIndicator"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"/>
</androidx.cardview.widget.CardView>