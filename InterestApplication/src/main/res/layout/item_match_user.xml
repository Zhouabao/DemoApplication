<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="345dp"
        android:layout_gravity="center"
        android:background="@drawable/shadow_173133"
        android:elevation="2dp"
        android:layout_height="wrap_content">

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpPhotos"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/ivVip"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_vip"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/iv_dislike"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_oval_white"
            android:layout_width="60dp"
            android:scaleType="center"
            android:alpha="0"
            android:src="@drawable/icon_like"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@id/vpPhotos"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/vpPhotos"/>

    <ImageView
            android:id="@+id/iv_like"
            android:alpha="0"
            android:background="@drawable/shape_oval_white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="center"
            android:src="@drawable/icon_dislike"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@id/vpPhotos"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/vpPhotos"/>

    <LinearLayout
            android:id="@+id/vpIndicator"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <include
            android:id="@+id/llAction"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            layout="@layout/match_action_layout"
            android:layout_marginTop="260dp"
            app:layout_constraintTop_toTopOf="@id/vpPhotos"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llAction">

        <TextView
                android:id="@+id/tvUserName"
                android:maxLength="10"
                android:textColor="@color/colorBlack4a"
                android:textSize="24sp"
                android:text="Username"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/tvUserAge"
                android:elevation="2dp"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorOrange"
                android:background="@drawable/shape_rectangle_gray_white_9dp"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:drawablePadding="4dp"
                android:paddingBottom="2dp"
                android:paddingRight="8dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tvUserName"
                app:layout_constraintLeft_toRightOf="@id/tvUserName"
                app:layout_constraintTop_toTopOf="@id/tvUserName"
                tools:text="23"/>

        <TextView
                android:id="@+id/tvUserLabels"
                android:elevation="2dp"
                android:gravity="center"
                android:background="@drawable/shape_rectangle_gray_white_9dp"
                android:layout_width="wrap_content"
                android:text="12"
                android:paddingLeft="8dp"
                android:textSize="12sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="8dp"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/icon_label_orange"
                android:textColor="@color/colorOrange"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tvUserAge"
                app:layout_constraintTop_toTopOf="@id/tvUserAge"/>

        <TextView
                android:id="@+id/tvLocation"
                android:elevation="2dp"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_location_orange"
                android:background="@drawable/shape_rectangle_gray_white_9dp"
                android:layout_width="wrap_content"
                android:text="123333km"
                android:paddingLeft="8dp"
                android:drawablePadding="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="12sp"
                android:paddingRight="8dp"
                android:textColor="@color/colorOrange"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tvUserLabels"
                app:layout_constraintTop_toTopOf="@id/tvUserAge"/>

        <TextView
                android:id="@+id/tvUserIntroduce"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:text="AntV 是蚂蚁金服全新代数据可视化解决方案，致力于提供一套…单方便、专业可靠、无限可能的数据可视化最佳实践。"
                android:textColor="@color/colorBlack4a"
                android:textSize="14sp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="13dp"
                android:lineSpacingMultiplier="1.25"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUserName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>