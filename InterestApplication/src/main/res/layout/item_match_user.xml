<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:descendantFocusability="beforeDescendants"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorBlack"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:contentPadding="0dp">

    <com.example.demoapplication.widgets.NoScrollViewPager
            android:id="@+id/vpPhotos"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    <TextView
            android:id="@+id/lastImgBtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/nextImgBtn"
            android:layout_width="100dp"
            android:layout_gravity="right|center_vertical"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:id="@+id/vpIndicator"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"/>

    <ImageView
            android:id="@+id/matchDislike"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_oval_white"
            android:layout_width="60dp"
            android:scaleType="center"
            android:alpha="0"
            android:layout_gravity="top|right"
            android:src="@drawable/icon_dislike"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            />

    <ImageView
            android:id="@+id/matchLike"
            android:layout_gravity="top|left"
            android:alpha="0"
            android:background="@drawable/shape_oval_white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="center"
            android:src="@drawable/icon_like"
            android:layout_width="60dp"
            android:layout_height="60dp"

            />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/v1"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivVip"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_vip"
                android:layout_width="25dp"
                android:scaleType="centerInside"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="@id/matchUserName"
                app:layout_constraintLeft_toRightOf="@id/matchUserName"
                app:layout_constraintTop_toTopOf="@id/matchUserName"
                />


        <TextView
                android:id="@+id/matchUserName"
                android:maxLength="10"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Username"/>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/matchUserInfoCl"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/matchUserName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/matchUserName">

            <TextView
                    android:id="@+id/matchUserAge"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="23 / 女 / 半导体"/>

            <TextView
                    android:id="@+id/matchUserJob"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_job"
                    android:textColor="@color/colorWhite"
                    android:drawablePadding="6dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/matchUserAge"
                    tools:text="半导体研发工程师"
                    />

            <TextView
                    android:id="@+id/matchUserLightCount"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_dynamic_small"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="6dp"
                    android:drawablePadding="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toLeftOf="@id/matchUserLabelsLikeCount"
                    app:layout_constraintTop_toBottomOf="@id/matchUserAge"
                    tools:text="12"
                    />

            <TextView
                    android:id="@+id/matchUserLabelsLikeCount"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/icon_label_small"
                    android:textColor="@color/colorWhite"
                    android:drawablePadding="6dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/matchUserAge"
                    tools:text="12"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
                android:id="@+id/matchUserDynamicLl"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/matchUserName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/matchUserName">

            <TextView
                    android:elevation="2dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:text="最近发布动态"
                    android:drawableLeft="@drawable/icon_dynamic_small"
                    android:drawablePadding="6dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/matchUserDynamicThumbRv"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginTop="5dp"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_rectangle_transparent"
                    />
        </LinearLayout>

        <TextView
                android:id="@+id/matchUserIntroduce"
                android:visibility="gone"
                android:layout_marginTop="7dp"
                android:layout_width="0dp"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:layout_marginRight="16dp"
                android:lineSpacingMultiplier="1.25"
                android:layout_height="wrap_content"
                android:maxLines="3"
                app:layout_constraintLeft_toLeftOf="@id/matchUserName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/matchUserName"
                tools:text="AntV 是蚂蚁金服全新代数据可视化解决方案，致力于提供一套…单方便、专业可靠、无限可能的数据可视化最佳实践。"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>