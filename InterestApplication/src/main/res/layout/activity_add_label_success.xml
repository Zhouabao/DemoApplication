<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.AddLabelSuccessActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentCl"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="match_parent">


        <TextView
                android:id="@+id/successLabelName"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff191919"
                android:textSize="26sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="兴趣"/>

        <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="已创建成功"
                android:textColor="#ff191919"
                android:textSize="22sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/successLabelName"
                />

        <TextView
                android:id="@+id/successLabelGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff191919"
                android:textSize="20sp"
                android:layout_marginTop="53dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/t1"
                tools:text="快秀一下你的健身成果"
                />

        <TextView
                android:id="@+id/changeLabel"
                android:layout_marginTop="18dp"
                android:text="换一个"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:background="@drawable/shape_rectangle_gray_white_10dp"
                android:drawableLeft="@drawable/icon_reselect_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFCBCDD3"
                android:gravity="center"
                android:padding="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/successLabelGuide"/>

        <ImageView
                android:id="@+id/publishImage"
                android:background="@drawable/icon_add_photo_label"
                android:layout_width="232dp"
                android:scaleType="center"
                android:layout_height="232dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/publish"
                app:layout_constraintTop_toBottomOf="@id/changeLabel"/>

        <TextView
                android:id="@+id/publish"
                android:text="完成"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:textSize="17sp"
                android:background="@drawable/selector_confirm_btn_25dp"
                android:layout_width="300dp"
                android:enabled="true"
                android:layout_height="38dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@id/startJitangBtn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        <TextView
                android:id="@+id/startJitangBtn"
                android:text="稍后再说"
                android:textColor="#ffcbcdd3"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:enabled="true"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_speed="1"
                app:lottie_fileName="data_add_label_success.json"
                app:lottie_imageAssetsFolder="images/"
                app:lottie_loop="false"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>