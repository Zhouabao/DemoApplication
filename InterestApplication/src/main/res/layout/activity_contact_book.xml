<?xml version="1.0" encoding="utf-8"?>

<com.kennyc.view.MultiStateView xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/stateview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:msv_emptyView="@layout/empty_layout"
                                app:msv_errorView="@layout/error_layout"
                                app:msv_loadingView="@layout/loading_layout"
                                app:msv_viewState="loading">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            tools:context=".ui.activity.ContactBookActivity">

        <LinearLayout
                android:id="@+id/llTitle"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:src="@drawable/icon_return"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/hotT1"
                    android:layout_marginLeft="12dp"
                    android:text="通讯录"
                    android:textColor="@color/colorBlackTitle"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    />


        </LinearLayout>

        <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_rectangle_gray_9dp"
                app:iconifiedByDefault="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llTitle"
                app:queryBackground="@null"
                app:queryHint="搜索联系人"
                app:showDividers="none"
                app:submitBackground="@null"
                />


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contactsRv"
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchView"/>


        <com.example.demoapplication.widgets.sortcontacts.WaveSideBarView
                android:id="@+id/indexBar"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingRight="15dp"
                android:background="@color/colorTransparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/contactsRv"
                app:sidebar_lazy_respond="false"
                app:sidebar_position="right"
                app:sidebar_text_color="@color/colorBlack"/>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchContactsRv"
                android:background="@color/colorWhite"
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.kennyc.view.MultiStateView>
