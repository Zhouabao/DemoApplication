<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.AddAddressActivity">

    <include layout="@layout/layout_actionbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llTitle">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/moreInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="收货人"
                android:textColor="#ff191919"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/addressName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="收货人姓名"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#ff191919"
                android:textColorHint="#ffc5c6c8"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/moreInfoTitle"
                app:layout_constraintLeft_toRightOf="@id/t2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/moreInfoTitle" />

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                app:layout_constraintLeft_toLeftOf="@id/moreInfoTitle"
                app:layout_constraintRight_toRightOf="@id/addressName"
                app:layout_constraintTop_toBottomOf="@id/addressName" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="联系方式"
                android:textColor="#ff191919"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1" />

            <EditText
                android:id="@+id/addressContact"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="联系方式"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#ff191919"
                android:textColorHint="#ffc5c6c8"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/t2"
                app:layout_constraintLeft_toRightOf="@id/t2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/t2" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                app:layout_constraintLeft_toLeftOf="@id/moreInfoTitle"
                app:layout_constraintRight_toRightOf="@id/addressName"
                app:layout_constraintTop_toBottomOf="@id/addressContact" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="选择地址"
                android:textColor="#ff191919"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/addressContent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:drawableRight="@drawable/icon_more_right_gray"
                android:gravity="center_vertical"
                android:hint="选择地址"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textColor="#ff191919"
                android:textColorHint="#ffc5c6c8"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/t3"
                app:layout_constraintLeft_toRightOf="@id/t2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/t3" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                app:layout_constraintLeft_toLeftOf="@id/moreInfoTitle"
                app:layout_constraintRight_toRightOf="@id/addressName"
                app:layout_constraintTop_toBottomOf="@id/addressContent" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="详细地址"
                android:textColor="#ff191919"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <EditText
                android:id="@+id/addressDetailContent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:gravity="center_vertical"

                android:hint="街道详细地址"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#ff191919"
                android:textColorHint="#ffc5c6c8"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/t4"
                app:layout_constraintLeft_toRightOf="@id/t2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/t4" />

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                app:layout_constraintLeft_toLeftOf="@id/moreInfoTitle"
                app:layout_constraintRight_toRightOf="@id/addressName"
                app:layout_constraintTop_toBottomOf="@id/addressDetailContent" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="邮政编码"
                android:textColor="#ff191919"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <EditText
                android:id="@+id/addressPostNumber"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="邮政编码"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#ff191919"
                android:textColorHint="#ffc5c6c8"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/t5"
                app:layout_constraintLeft_toRightOf="@id/t2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/t5" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                app:layout_constraintLeft_toLeftOf="@id/moreInfoTitle"
                app:layout_constraintRight_toRightOf="@id/addressName"
                app:layout_constraintTop_toBottomOf="@id/addressPostNumber" />

            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="设为默认地址"
                android:textColor="#ff191919"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/moreInfoTitle"
                app:layout_constraintTop_toBottomOf="@id/t5" />

            <Switch
                android:id="@+id/switchDefaultAddress"
                android:layout_width="44dp"
                android:layout_height="26dp"
                android:checked="false"
                android:showText="false"
                android:thumb="@drawable/switch_ios_thumb"
                android:track="@drawable/selector_switch_ios_track"
                app:layout_constraintBottom_toBottomOf="@id/t6"
                app:layout_constraintRight_toRightOf="@id/addressPostNumber"
                app:layout_constraintTop_toTopOf="@id/t6" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                app:layout_constraintLeft_toLeftOf="@id/moreInfoTitle"
                app:layout_constraintRight_toRightOf="@id/addressName"
                app:layout_constraintTop_toBottomOf="@id/t6" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_confirm_btn_25dp"
            android:gravity="center"
            android:text="保存并使用"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>