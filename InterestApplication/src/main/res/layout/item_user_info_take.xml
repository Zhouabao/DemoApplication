<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/userCamera"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@drawable/shape_rectangle_gray_f3f3f6_5dp">

    <TextView
            android:id="@+id/addPhotoTip"
            android:textColor="@color/colorWhite"
            android:text="再传两张生活照吧"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:background="@drawable/icon_arrow_notify_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/icon_add_phot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    <include
            layout="@layout/layout_add_score"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="37dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

</LinearLayout>

