<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/colorTransparent"
              android:layout_width="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/shape_rectangle_gray_white_10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:text="@string/is_sure_delete_label"
                android:textColor="#ff191919"
                android:textSize="18sp"
                />


        <TextView
                android:id="@+id/tip"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="@string/is_sure_delete_history"
                android:textColor="#ff888d92"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"/>

        <View
                android:id="@+id/view"
                android:background="@color/colorDivider"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tip"/>


        <TextView
                android:id="@+id/cancel"
                android:gravity="center"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:text="@string/cancel"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#ffc5c6c8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/view1"
                app:layout_constraintTop_toBottomOf="@id/view"/>

        <View
                android:id="@+id/view1"
                android:background="@color/colorDivider1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_height="50dp"
                android:layout_width="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view"/>

        <TextView
                android:id="@+id/confirm"
                android:gravity="center"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/ok"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                app:layout_constraintLeft_toRightOf="@id/view1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

