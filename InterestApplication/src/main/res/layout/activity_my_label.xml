<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:fitsSystemWindows="true"
              tools:context=".ui.activity.MyLabelActivity">

    <include layout="@layout/layout_actionbar"/>

    <com.kennyc.view.MultiStateView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/stateMyLabel"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:msv_emptyView="@layout/empty_layout"
            app:msv_errorView="@layout/error_layout"
            app:msv_loadingView="@layout/loading_layout"
            app:msv_viewState="loading">

        <LinearLayout
                android:background="@color/colorWhite"
                android:layout_marginTop="7dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                    <View
                            android:background="@drawable/icon_shadow_white_down"
                            android:layout_width="match_parent"
                            android:layout_height="9dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mylabelRv"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:overScrollMode="never"
                            android:scrollbars="none"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <TextView
                    android:id="@+id/addLabelBtn"
                    android:background="@drawable/shape_rectangle_orange_25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="46dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:text="添加兴趣"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
        </LinearLayout>


    </com.kennyc.view.MultiStateView>

</LinearLayout>