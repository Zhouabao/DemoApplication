<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_rectangle_top_left_right_25_corners_bg">

    <TextView
        android:id="@+id/moreInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="挑选礼物，表达诚意"
        android:textColor="#ff191919"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赠送礼物，立即达成好友关系"
        android:textColor="#ff888d92"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/moreInfoTitle"
        app:layout_constraintTop_toBottomOf="@id/moreInfoTitle" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/giftRv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:minHeight="257dp"
        android:overScrollMode="never"
        android:background="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t1" />

    <View
        android:id="@+id/iv1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#f6f6f6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/giftRv" />


    <TextView
        android:id="@+id/candyCount"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_orange_white_15dp"
        android:drawableLeft="@drawable/icon_candy_small"
        android:drawablePadding="3dp"
        android:paddingLeft="7dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="3999"
        android:textColor="#ffff6318"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/sendGiftBtn"
        app:layout_constraintLeft_toLeftOf="@id/moreInfoTitle"
        app:layout_constraintTop_toTopOf="@id/sendGiftBtn" />

    <TextView
        android:id="@+id/chargeBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/shape_rectangle_orange_15dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="充值"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/candyCount"
        app:layout_constraintRight_toRightOf="@id/candyCount"
        app:layout_constraintTop_toTopOf="@id/candyCount" />

    <TextView
        android:id="@+id/sendGiftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_rectangle_orange_24dp"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:text="送出礼物"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv1" />

</androidx.constraintlayout.widget.ConstraintLayout>