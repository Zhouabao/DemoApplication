<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="match_parent"
        tools:context=".ui.activity.LabelsActivity">

    <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="center"
            android:src="@drawable/icon_return"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorBlackTitle"
            android:layout_marginLeft="12dp"
            android:text="选择标签"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/btnBack"/>

    <Button
            android:id="@+id/completeLabelBtn"
            android:gravity="center"
            tools:text="再选1个"
            android:background="@drawable/selector_confirm_btn"
            android:layout_marginRight="15dp"
            android:textColor="@color/complete_btn_color_selector"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            android:layout_width="70dp"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            android:textSize="14sp"
            android:layout_height="30dp"/>

    <ScrollView
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/labelRecyclerview"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>