<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_height="match_parent"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_gravity="center_horizontal"
             android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/targetCl"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/userInfoCl"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_rectangle_gray_white_15dp"
                android:layout_width="0dp"
                android:layout_marginTop="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/avatorFl">

            <View
                    android:id="@+id/v1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"/>

            <TextView
                    android:id="@+id/targetBothInterest"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:paddingRight="6dp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="6dp"
                    tools:text="你们都喜欢蹦迪、唱歌等三个兴趣"
                    android:textColor="#ff191919"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    android:background="@drawable/shape_rectangle_gray_18dp"
                    android:drawableLeft="@drawable/icon_cuohe_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v1"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/targetSquare"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/targetBothInterest"/>

            <TextView
                    android:id="@+id/targetUserDetail"
                    android:text="个人主页"
                    android:textColor="#ff191919"
                    android:textSize="14sp"
                    android:background="@drawable/rectangle_black_white_19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:paddingRight="60dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintTop_toBottomOf="@id/targetSquare"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
                android:id="@+id/avatorFl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/myAvator"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="59dp"
                    android:src="@drawable/icon_default_avator_logo"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="2dp"
                    />

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/targetAvator"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_default_avator_logo"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="2dp"
                    />
        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
