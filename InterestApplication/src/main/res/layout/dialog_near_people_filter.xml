<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_rectangle_white_top_left_right_25_corners_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/view1"
        android:layout_width="45dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_gray_3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/moreInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="同城筛选"
        android:textColor="#ff191919"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="排序"
        android:textColor="#ff191919"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moreInfoTitle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSort"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="@id/t2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t2" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="性别"
        android:textColor="#ff191919"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/t2"
        app:layout_constraintTop_toBottomOf="@id/rvSort" />


    <RadioGroup
        android:id="@+id/rbSexAll"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_radio_sex_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp"
        android:animateLayoutChanges="true"
        app:layout_constraintLeft_toLeftOf="@id/t2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t3">

        <RadioButton
            android:id="@+id/switchSexMan"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_filter_sex_rb"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="男性"
            android:textColor="@color/sex_color_selector"
            android:textSize="15sp" />


        <RadioButton
            android:id="@+id/switchSexWoman"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_filter_sex_rb"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="女性"
            android:textColor="@color/sex_color_selector"
            android:textSize="15sp" />


        <RadioButton
            android:id="@+id/switchSexAll"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_filter_sex_rb"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="不限"
            android:textColor="@color/sex_color_selector"
            android:textSize="15sp" />


    </RadioGroup>

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="年龄"
        android:textColor="#ff191919"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/t2"
        app:layout_constraintTop_toBottomOf="@id/rbSexAll" />

    <TextView
        android:id="@+id/fliterAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18-25"
        android:textColor="#ff191919"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/rbSexAll"
        app:layout_constraintTop_toTopOf="@id/t4" />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekBarAge"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/rbSexAll"
        app:layout_constraintTop_toBottomOf="@id/t4"
        app:rsb_gravity="center"
        app:rsb_max="35"
        app:rsb_min="18"
        app:rsb_min_interval="2"
        app:rsb_mode="range"
        app:rsb_progress_drawable="@drawable/color_progress_age"
        app:rsb_progress_drawable_default="@drawable/color_progress_age_background"
        app:rsb_progress_height="2dp"
        app:rsb_thumb_drawable="@drawable/icon_filter_age" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="18"
        android:textColor="#ffc5c6c8"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/t2"
        app:layout_constraintTop_toBottomOf="@id/seekBarAge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="3dp"
        android:text="35+"
        android:textColor="#ffc5c6c8"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@id/rbSexAll"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintTop_toTopOf="@id/tv2" />

    <TextView
        android:id="@+id/resetBtn"
        android:layout_width="156dp"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_rectangle_light_gray_27dp"
        android:gravity="center"
        android:text="重置"
        android:textColor="#ff4f4b55"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/t2"
        app:layout_constraintTop_toBottomOf="@id/tv2" />

    <TextView
        android:id="@+id/confirmFilterBtn"
        android:layout_width="156dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:background="@drawable/shape_rectangle_orange_27dp"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/rbSexAll"
        app:layout_constraintTop_toTopOf="@id/resetBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>