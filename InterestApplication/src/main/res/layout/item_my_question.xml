<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/shape_rectangle_gray_white_25dp"
              android:layout_width="match_parent"
              android:layout_gravity="center"
              android:gravity="center_vertical"
              android:layout_height="50dp">

    <TextView
            android:id="@+id/questionNum"
            android:layout_gravity="center"
            android:text="Q1"
            android:textStyle="bold"
            android:textColor="@color/colorBlackTitle"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/questionMsg"
            android:text="你妈妈和我一起掉进水里你也来吗？"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorBlackTitle"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/questionDel"
            android:scaleType="center"
            android:src="@drawable/icon_delete_label"
            android:layout_marginRight="15dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
</LinearLayout>