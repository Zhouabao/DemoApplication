<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.PhoneActivity">

    <ImageView
            android:id="@+id/btnBack"
            style="@style/BckBtnStyle"
            android:paddingLeft="15dp"
            android:src="@drawable/icon_close_black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/btnLoginQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="帮助"
            android:visibility="visible"
            android:textColor="#ff9b9b9b"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"/>

    <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:text="请输入手机号"
            android:textColor="#ff262626"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <TextView
            android:id="@+id/tipTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嗨，交出你的手机号积糖要帮你注册啦"
            android:textColor="#ff4c4c4c"
            android:layout_marginTop="9dp"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@id/titleTv"
            app:layout_constraintTop_toBottomOf="@id/titleTv"
            />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tipTv">

        <TextView
                android:id="@+id/countryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:alpha="0.5"
                android:layout_marginLeft="5dp"
                android:textColor="#FF84888B"
                android:textSize="20sp"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/icon_popup_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的手机号"
                android:textSize="20sp"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/colorBlack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/countryCode"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/nickNameClean"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_close"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/etPhone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/etPhone"/>

        <View
                android:id="@+id/nickNameBg"
                android:layout_marginTop="9dp"
                android:background="@color/colorDividerC4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/countryCode"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
            android:id="@+id/btnVerifyCode"
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:layout_marginTop="63dp"
            android:background="@drawable/selector_confirm_btn1"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffffff"
            android:enabled="false"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/clPhone"
            app:layout_constraintRight_toRightOf="@id/clPhone"
            app:layout_constraintTop_toBottomOf="@id/clPhone"/>


</androidx.constraintlayout.widget.ConstraintLayout>
