<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kennyc.view.MultiStateView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/statePeopleNearby"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msv_errorView="@layout/error_layout"
        app:msv_loadingView="@layout/loading_layout"
        app:msv_viewState="loading"
        tools:context=".ui.fragment.PeopleNearbyFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshPeopleNearby"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlDisableContentWhenLoading="true"
                app:srlDisableContentWhenRefresh="true"
                app:srlEnableLoadMore="true"
                app:srlEnableRefresh="true">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPeopleNearby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <LinearLayout
                android:id="@+id/lieAvatorLl"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:visibility="gone"
                android:background="#1AFF6318"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lieAvatorContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="当前头像非真实头像，替换后可获得首页推荐"
                    android:textColor="#ffff6318"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/changeAvatorBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_rectangle_orange_12dp"
                    android:paddingLeft="7dp"
                    android:paddingTop="3dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="3dp"
                    android:text="立即替换"
                    android:textColor="#ffffffff"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/changeAvatorCloseBtn"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_close_small" />
            </LinearLayout>


        </FrameLayout>

    </com.kennyc.view.MultiStateView>

</FrameLayout>
