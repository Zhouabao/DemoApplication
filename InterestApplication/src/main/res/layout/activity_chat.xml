<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/message_fragment_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".nim.activity.ChatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:src="@drawable/icon_return"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/chatName"
                android:layout_marginLeft="12dp"
                android:text="Javer"
                android:textColor="#ff222222"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/btnBack"
                />

        <TextView
                android:id="@+id/inputTip"
                android:textColor="@color/colorBlackText"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/chatName"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/chatMore"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_more_black"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <View
                android:background="@color/colorDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/llTitle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>