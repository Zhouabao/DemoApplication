<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:layout_width="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vipCl"
            android:orientation="vertical"
            android:layout_marginTop="17dp"
            android:background="@drawable/shape_rectangle_gray_vip"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/vipOriginalPrice"
                android:textStyle="normal"
                tools:text="￥15"
                android:textColor="@color/colorBlackTitle"
                android:textSize="12sp"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/vipNowPrice"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                tools:text="¥9.9"
                android:textStyle="bold"
                android:textColor="@color/colorBlack4a"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vipOriginalPrice"
                />

        <TextView
                android:id="@+id/vipLong"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1个月"
                android:textColor="#ff333333"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vipNowPrice"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:visibility="gone"
            android:id="@+id/vipSaleType"
            android:background="@drawable/icon_charge_rectangle"
            android:textColor="@color/colorWhite"
            tools:text="限时特惠"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_width="48dp"
            android:gravity="center"
            android:textSize="8sp"
            android:layout_height="18dp"/>
</RelativeLayout>
