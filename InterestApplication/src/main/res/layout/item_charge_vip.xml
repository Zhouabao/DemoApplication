<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vipCl"
            android:layout_marginTop="9dp"
            android:orientation="vertical"
            android:background="@drawable/shape_gray_7dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:minHeight="114dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/vipLong"
                android:textStyle="normal"
                android:textColor="@color/colorBlackTitle"
                android:textSize="12sp"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="三个月"/>

        <TextView
                android:id="@+id/vipNowPrice"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorBlack4a"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vipLong"
                tools:text="¥9.99"
                />

        <TextView
                android:id="@+id/originalPrice"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥60"
                android:textColor="#ff333333"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vipNowPrice"
                />


        <TextView
                android:id="@+id/vipDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@null"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/originalPrice"
                tools:text="优惠50%"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:id="@+id/vipSaleType"
            android:visibility="visible"
            android:background="@drawable/shape_vip_charge_popular_bg"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_height="22dp"
            tools:text="限时特惠"/>
</RelativeLayout>
