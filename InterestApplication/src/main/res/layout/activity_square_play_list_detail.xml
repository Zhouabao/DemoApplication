<?xml version="1.0" encoding="utf-8"?>

<com.kennyc.view.MultiStateView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msv_emptyView="@layout/empty_layout"
        app:msv_errorView="@layout/error_layout"
        android:id="@+id/stateview"
        app:msv_viewState="loading"
        app:msv_loadingView="@layout/loading_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:context=".ui.activity.SquarePlayListDetailActivity">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/friendSquareList"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/btnBack"
                android:scaleType="center"
                android:layout_marginLeft="9dp"
                android:src="@drawable/icon_back_white"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        <ImageView
                android:id="@+id/rvLast"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_left"
                android:layout_width="19dp"
                android:background="@drawable/shape_oval_gray"
                android:layout_height="19dp"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/rvNext"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_right"
                android:layout_width="19dp"
                android:scaleType="center"
                android:background="@drawable/shape_oval_gray"
                android:layout_height="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.kennyc.view.MultiStateView>
