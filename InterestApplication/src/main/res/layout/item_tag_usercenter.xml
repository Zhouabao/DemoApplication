<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13dp">

    <ImageView
        android:id="@+id/tagIcon"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:src="@drawable/icon_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_cover_bg40_10dp"
        app:layout_constraintBottom_toBottomOf="@id/tagIcon"
        app:layout_constraintLeft_toLeftOf="@id/tagIcon"
        app:layout_constraintRight_toRightOf="@id/tagIcon"
        app:layout_constraintTop_toTopOf="@id/tagIcon" />

    <TextView
        android:id="@+id/tagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旅行"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tagIcon"
        app:layout_constraintLeft_toLeftOf="@id/tagIcon"
        app:layout_constraintRight_toRightOf="@id/tagIcon"
        app:layout_constraintTop_toTopOf="@id/tagIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_gray_13dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingTop="2dp"
        android:paddingRight="12dp"
        android:paddingBottom="2dp"
        android:text="@string/edit_tag"
        android:textColor="#ffffffff"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/tagIcon"
        app:layout_constraintRight_toRightOf="@id/tagIcon"
        app:layout_constraintTop_toBottomOf="@id/tagName" />


</androidx.constraintlayout.widget.ConstraintLayout>