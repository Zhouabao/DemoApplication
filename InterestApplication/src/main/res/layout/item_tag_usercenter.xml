<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/tagIcon"
            android:layout_width="140dp"
            android:src="@drawable/icon_logo"
            android:layout_height="88dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:background="@drawable/rectangle_cover_bg40_10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tagIcon"
            app:layout_constraintLeft_toLeftOf="@id/tagIcon"
            app:layout_constraintRight_toRightOf="@id/tagIcon"
            app:layout_constraintTop_toTopOf="@id/tagIcon"/>

    <TextView
            android:id="@+id/tagName"
            android:text="旅行"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="@id/tagIcon"
            app:layout_constraintRight_toRightOf="@id/tagIcon"
            app:layout_constraintTop_toTopOf="@id/tagIcon"/>

    <TextView
            android:id="@+id/tagEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑兴趣"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="2dp"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:background="@drawable/rectangle_gray_13dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/tagIcon"
            app:layout_constraintRight_toRightOf="@id/tagIcon"
            app:layout_constraintTop_toBottomOf="@id/tagName"
            />


</androidx.constraintlayout.widget.ConstraintLayout>