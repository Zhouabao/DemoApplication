<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/shape_rectangle_gray_15dp"
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <TextView
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="举报原因"
            android:textColor="#ff000000"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/message"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="请填写您举报的原因"
            android:textColor="#ff000000"
            android:textSize="13sp"
            />
    <EditText
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/message"
            android:layout_marginTop="16dp"
            android:textColorHint="#4D3C3C43"
            android:hint="输入原因"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:background="@drawable/shape_rectangle_gray_white_5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

    <View
            android:id="@+id/view"
            android:layout_below="@id/content"
            android:layout_marginTop="18dp"
            android:background="#4A3C3C43"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/view"
            android:layout_height="43dp">

        <TextView
                android:id="@+id/cancel"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="取消"
                android:textStyle="normal"
                android:textColor="#FF007AFF"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <View
                android:id="@+id/cancelView"
                android:layout_width="1dp"
                android:background="#4A3C3C43"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/confirm"
                android:textColor="#FF007AFF"
                android:textSize="18sp"
                android:text="确认"
                android:textStyle="normal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

    </LinearLayout>

</RelativeLayout>

