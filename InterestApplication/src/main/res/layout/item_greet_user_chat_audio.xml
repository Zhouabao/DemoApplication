<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:id="@+id/chatContentDouhao1"
            android:src="@drawable/icon_douhao_left"
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/chatContentIndex"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3"
            android:textColor="#ffc5c6c8"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/chatContentDouhao1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/chatContentDouhao1"
            />

    <LinearLayout
            android:id="@+id/audioRecordLl"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:background="@drawable/gradient_audio_bg"
            app:layout_constraintBottom_toTopOf="@id/chatContentDouhao2"
            app:layout_constraintLeft_toLeftOf="@id/chatContentDouhao1"
            app:layout_constraintRight_toRightOf="@id/chatContentIndex"
            app:layout_constraintTop_toBottomOf="@id/chatContentDouhao1">

        <ImageView
                android:id="@+id/audioPlayBtn"
                android:background="@drawable/shape_oval_white"
                android:layout_gravity="center"
                android:src="@drawable/icon_play_audio"
                android:layout_width="28dp"
                android:layout_height="28dp"/>

        <com.sdy.jitangapplication.widgets.TimeRunTextView
                android:id="@+id/audioTime"
                tools:text="00:30"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <!--<com.sdy.jitangapplication.player.VoisePlayingIcon-->
        <!--android:id="@+id/voicePlayView"-->
        <!--android:layout_width="160dp"-->
        <!--android:layout_height="22dp"-->
        <!--android:background="@color/transparent"-->
        <!--app:pointer_color="@color/colorWhite"-->
        <!--app:pointer_num="11"-->
        <!--android:layout_marginLeft="12dp"-->
        <!--app:pointer_width="3"/>-->

        <com.airbnb.lottie.LottieAnimationView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/voicePlayView"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:lottie_autoPlay="false"
                app:lottie_fileName="yinzhu.json"
                app:lottie_loop="true"/>


    </LinearLayout>


    <ImageView
            android:id="@+id/chatContentDouhao2"
            android:src="@drawable/icon_douhao_right"
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

