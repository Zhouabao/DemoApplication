<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical"
              tools:context=".ui.activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabMain"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabIndicatorColor="@color/colorOrange"
                app:tabIndicatorHeight="2dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/colorBlackTitle"
                app:tabTextColor="@color/colorGrayText"/>

        <ImageView
                android:id="@+id/filterBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_filter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/notificationBtn"
                app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
                android:visibility="gone"
                android:id="@+id/llMsgCount"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/notificationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_notification1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:layout_marginTop="4dp"
                android:paddingRight="16dp">

            <TextView
                    android:id="@+id/msgHi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/icon_flash_white"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="3"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>


            <TextView
                    android:id="@+id/msgLike"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/icon_like_white"
                    android:drawablePadding="5dp"
                    android:text="3"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>


            <TextView
                    android:id="@+id/msgSquare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/icon_time_white"
                    android:drawablePadding="5dp"
                    android:text="3"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>


            <TextView
                    android:id="@+id/msgChat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/icon_msg_white"
                    android:drawablePadding="5dp"
                    android:text="3"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>


        </LinearLayout>
        <ImageView
                android:id="@+id/notificationBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_notification"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ivUserFace"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/ivNewMsg"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="34dp"
                android:background="@drawable/shape_oval_orange"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@id/filterBtn"
                app:layout_constraintTop_toTopOf="@id/notificationBtn"/>


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserFace"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_avatar_01"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>