<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.sdy.jitangapplication.widgets.NoScrollViewPager
            android:id="@+id/vpMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </com.sdy.jitangapplication.widgets.NoScrollViewPager>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_gravity="bottom"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tabMatchCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableTop="@drawable/icon_tab_match_checked"
                android:drawablePadding="5dp"
                android:gravity="center_horizontal|bottom"
                android:text="@string/tab_heart"
                android:textColor="@color/colorOrange"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tabSquare"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tabSquare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableTop="@drawable/icon_tab_square"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/tab_find"
                android:textColor="@color/colorGrayCCC"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/tabMatchCount"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/tabMatchCount"
                app:layout_constraintRight_toLeftOf="@id/tabView" />


            <ImageView
                android:id="@+id/tabView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:src="@drawable/icon_tab_dating"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/tabSquare"
                app:layout_constraintRight_toLeftOf="@id/tabMessage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tabMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableTop="@drawable/icon_tab_message"
                android:drawablePadding="@dimen/dp_size_5"
                android:gravity="center"
                android:text="@string/tab_message"
                android:textColor="@color/colorGrayCCC"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tabMatchCount"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/tabView"
                app:layout_constraintRight_toLeftOf="@id/tabMe" />

            <ImageView
                android:id="@+id/ivNewMsg"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/shape_oval_orange"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@id/tabMessage"
                app:layout_constraintRight_toRightOf="@id/tabMessage"
                app:layout_constraintTop_toTopOf="@id/tabMessage" />


            <TextView
                android:id="@+id/tabMe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:background="@color/colorWhite"
                android:drawableTop="@drawable/icon_tab_me"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/tab_mine"
                android:textColor="@color/colorGrayCCC"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tabMatchCount"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/tabMessage"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/tabBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="49dp"
        android:src="@drawable/icon_bg_main_tab1" />

    <ImageView
        android:id="@+id/tabDating"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="6dp"
        android:src="@drawable/icon_tab_dating" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/guideBrowseStyleCl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorHalfBlack"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="46dp"
            android:background="@drawable/shape_oval_white"
            android:scaleType="center"
            android:src="@drawable/icon_style_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_guide_change_style"
            app:layout_constraintRight_toRightOf="@id/iv1"
            app:layout_constraintTop_toBottomOf="@id/iv1" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/click_switch_mode"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@id/iv2"
            app:layout_constraintTop_toBottomOf="@id/iv2" />

        <TextView
            android:id="@+id/nextBtn1"
            android:layout_width="92dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_rectangle_gray_20dp"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/tv1"
            app:layout_constraintRight_toRightOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv1" />

        <ImageView
            android:id="@+id/iv11"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_oval_white"
            android:scaleType="center"
            android:src="@drawable/icon_filter"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_guide_change_style"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@id/iv11"
            app:layout_constraintTop_toBottomOf="@id/iv11" />

        <TextView
            android:id="@+id/tv11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="@string/new_add_filter"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/iv21"
            app:layout_constraintTop_toBottomOf="@id/iv21" />

        <TextView
            android:id="@+id/nextBtn11"
            android:layout_width="92dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_rectangle_gray_20dp"
            android:gravity="center"
            android:text="好的"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@id/tv11"
            app:layout_constraintTop_toBottomOf="@id/tv11" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>