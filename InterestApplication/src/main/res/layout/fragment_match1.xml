<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.MatchFragment">


    <com.example.demoapplication.widgets.stackview.StackCardsView
            android:id="@+id/matchUserStackView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="66dp"
            android:clipToPadding="false"
            android:visibility="gone"
            app:itemHeight="535dp"
            app:itemWidth="340dp"/>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/matchUserRv"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/btnDislike"
                android:scaleType="center"
                android:background="@drawable/shape_oval_white"
                android:src="@drawable/icon_dislike"
                android:layout_width="60dp"
                android:elevation="2dp"
                android:layout_marginRight="24dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="@id/btnChat"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnChat"
                app:layout_constraintTop_toTopOf="@id/btnChat"/>

        <ImageView
                android:id="@+id/btnChat"
                android:src="@drawable/icon_flash"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/btnDislike"
                app:layout_constraintRight_toLeftOf="@id/btnLike"
                app:layout_constraintTop_toTopOf="parent"
                />

        <TextView
                android:id="@+id/tvLeftChatTime"
                android:elevation="2dp"
                android:layout_marginTop="46dp"
                android:textColor="@color/colorOrange"
                android:background="@drawable/shape_rectangle_gray_white_15dp"
                android:layout_width="21dp"
                android:gravity="center"
                android:textSize="12sp"
                android:text="3"
                android:layout_height="21dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="@id/btnChat"
                app:layout_constraintRight_toRightOf="@id/btnChat"
                app:layout_constraintTop_toTopOf="@id/btnChat"/>

        <ImageView
                android:id="@+id/btnLike"
                android:layout_marginLeft="24dp"
                android:background="@drawable/shape_oval_white"
                android:src="@drawable/icon_like"
                android:layout_width="60dp"
                android:scaleType="center"
                android:elevation="2dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="@id/btnChat"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/btnChat"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnChat"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>