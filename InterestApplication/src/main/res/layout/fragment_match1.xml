<?xml version="1.0" encoding="utf-8"?>
<com.kennyc.view.MultiStateView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/stateview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msv_animateViewChanges="true"
        app:msv_emptyView="@layout/empty_layout"
        app:msv_errorView="@layout/error_layout"
        app:msv_loadingView="@layout/loading_layout"
        app:msv_viewState="content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragment.MatchFragment1">

        <RelativeLayout
                android:clipChildren="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:id="@+id/actionCl"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:clipChildren="false"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/btnDislike"
                        android:scaleType="center"
                        android:background="@drawable/shape_oval_white"
                        android:src="@drawable/icon_dislike"
                        android:layout_width="60dp"
                        android:elevation="2dp"
                        android:layout_marginRight="24dp"
                        android:layout_height="60dp"
                        app:layout_constraintBottom_toBottomOf="@id/btnChat"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/btnChat"
                        app:layout_constraintTop_toTopOf="@id/btnChat"/>

                <ImageView
                        android:id="@+id/btnChat"
                        android:src="@drawable/icon_flash"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toRightOf="@id/btnDislike"
                        app:layout_constraintRight_toLeftOf="@id/btnLike"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                <TextView
                        android:id="@+id/tvLeftChatTime"
                        android:elevation="2dp"
                        android:textColor="@color/colorOrange"
                        android:background="@drawable/shape_rectangle_gray_white_15dp"
                        android:layout_width="20dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="3"
                        android:layout_height="20dp"
                        app:layout_constraintBottom_toBottomOf="@id/btnChat"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="@id/btnChat"
                        app:layout_constraintRight_toRightOf="@id/btnChat"/>

                <ImageView
                        android:id="@+id/btnLike"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/shape_oval_white"
                        android:src="@drawable/icon_like"
                        android:layout_width="60dp"
                        android:scaleType="center"
                        android:elevation="2dp"
                        android:layout_height="60dp"
                        app:layout_constraintBottom_toBottomOf="@id/btnChat"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toRightOf="@id/btnChat"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/btnChat"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.yuyakaido.android.cardstackview.CardStackView
                    android:id="@+id/card_stack_view"
                    android:clipToPadding="false"
                    android:layout_above="@id/actionCl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
        </RelativeLayout>


    </LinearLayout>
</com.kennyc.view.MultiStateView>
