<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/contentLayout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragment.MatchFragment1">

        <RelativeLayout
                android:clipChildren="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.yuyakaido.android.cardstackview.CardStackView
                    android:id="@+id/card_stack_view"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnChatCl"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"
                    android:layout_alignBottom="@id/card_stack_view"
                    android:layout_marginBottom="26dp"
                    android:clipChildren="false"
                    android:layout_height="wrap_content">


                <ImageView
                        android:id="@+id/greetBtn"
                        android:src="@drawable/icon_flash"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvLeftChatTime"
                        />

                <TextView
                        android:id="@+id/tvLeftChatTime"
                        android:elevation="2dp"
                        android:textColor="@color/colorOrange"
                        android:background="@drawable/shape_rectangle_gray_white_15dp"
                        android:layout_width="20dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="0"
                        android:layout_height="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                <ImageView
                        android:id="@+id/likeBtn"
                        android:src="@drawable/icon_like_match"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/greetBtn"
                        />


                <ImageView
                        android:id="@+id/dislikeBtn"
                        android:src="@drawable/icon_dislike_match"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/likeBtn"
                        />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                    android:id="@+id/animation_like"
                    android:alpha="0"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_like_match"
                    android:layout_width="50dp"
                    android:layout_centerVertical="true"
                    android:layout_height="50dp"/>

            <ImageView
                    android:id="@+id/animation_dislike"
                    android:alpha="0"
                    android:src="@drawable/icon_dislike_match"
                    android:layout_width="0dp"
                    android:layout_centerVertical="true"
                    android:layout_height="0dp"/>

            <ImageView
                    android:id="@+id/animation_chathi"
                    android:alpha="0"
                    android:src="@drawable/icon_flash"
                    android:layout_width="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"/>


        </RelativeLayout>


    </LinearLayout>

    <include
            android:id="@+id/loadingLayout"
            layout="@layout/loading_layout_match_lottie"
            android:visibility="visible"/>

    <include
            android:id="@+id/errorLayout"
            layout="@layout/error_layout"
            android:visibility="gone"/>

    <include
            android:id="@+id/emptyLayout"
            layout="@layout/empty_match_layout"
            android:visibility="gone"/>
</FrameLayout>

