<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical"
              android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tabHeaderCl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorTransparent"
            android:gravity="center_vertical">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/headRvLabels"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="44dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/filterBtn"
                app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
                android:id="@+id/filterBtn"
                android:paddingRight="15dp"
                android:scaleType="center"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:src="@drawable/icon_filter"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/headRvLabels"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/headRvLabels"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headRvLabels">

            <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textColor="#ff888d92"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/manageLabel"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/manageLabel"
                    tools:text="为你推荐3个标签"
                    />

            <TextView
                    android:id="@+id/manageLabel"
                    android:background="@drawable/shape_rectangle_gray_white_15dp"
                    android:text="管理标签"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff888d92"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/t1"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/findToTalk"
                    android:layout_width="wrap_content"
                    android:text="找人说话"
                    android:textColor="#ff888d92"
                    android:textSize="13sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_rectangle_light_gray_15dp"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/icon_switch_gray"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/contentLayout"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.fragment.MatchFragment1">


            <RelativeLayout
                    android:clipChildren="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <com.yuyakaido.android.cardstackview.CardStackView
                        android:id="@+id/card_stack_view"
                        android:clipToPadding="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnChatCl"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="35dp"
                        android:layout_alignBottom="@id/card_stack_view"
                        android:layout_marginBottom="26dp"
                        android:clipChildren="false"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:id="@+id/greetBtn"
                            android:src="@drawable/icon_flash"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvLeftChatTime"
                            />

                    <TextView
                            android:id="@+id/tvLeftChatTime"
                            android:elevation="2dp"
                            android:textColor="@color/colorOrange"
                            android:background="@drawable/shape_rectangle_gray_white_15dp"
                            android:layout_width="20dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="0"
                            android:layout_height="20dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />


                    <ImageView
                            android:id="@+id/likeBtn"
                            android:src="@drawable/icon_like_match"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_marginTop="20dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/greetBtn"
                            />


                    <ImageView
                            android:id="@+id/dislikeBtn"
                            android:src="@drawable/icon_dislike_match"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_marginTop="20dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/likeBtn"
                            />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                        android:id="@+id/animation_like"
                        android:alpha="0"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_like_match"
                        android:layout_width="50dp"
                        android:layout_centerVertical="true"
                        android:layout_height="50dp"/>

                <ImageView
                        android:id="@+id/animation_dislike"
                        android:alpha="0"
                        android:src="@drawable/icon_dislike_match"
                        android:layout_width="0dp"
                        android:layout_centerVertical="true"
                        android:layout_height="0dp"/>

                <TextView
                        android:id="@+id/completeLabelBtn"
                        android:paddingLeft="9dp"
                        android:drawableLeft="@drawable/icon_edit_model"
                        android:gravity="center"
                        android:text="完善标签"
                        android:textColor="#ff191919"
                        android:textSize="13sp"
                        android:visibility="gone"
                        android:background="@drawable/shape_rectangle_white_100dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:drawablePadding="4dp"
                        android:paddingRight="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_height="wrap_content"/>


            </RelativeLayout>


        </LinearLayout>

        <include
                android:id="@+id/loadingLayout"
                layout="@layout/loading_layout_match_lottie"
                android:visibility="visible"/>

        <include
                android:id="@+id/errorLayout"
                layout="@layout/error_layout"
                android:visibility="gone"/>

        <include
                android:id="@+id/emptyLayout"
                layout="@layout/empty_match_layout"
                android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>

