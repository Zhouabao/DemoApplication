<?xml version="1.0" encoding="utf-8"?>
<com.kennyc.view.MultiStateView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/stateview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msv_animateViewChanges="false"
        app:msv_emptyView="@layout/loading_layout_match_lottie"
        app:msv_errorView="@layout/error_layout"
        app:msv_loadingView="@layout/loading_layout_match_lottie"
        app:msv_viewState="loading">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragment.MatchFragment1">

        <RelativeLayout
                android:clipChildren="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:id="@+id/actionCl"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

            <com.yuyakaido.android.cardstackview.CardStackView
                    android:id="@+id/card_stack_view"
                    android:clipToPadding="false"
                    android:layout_above="@id/actionCl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_above="@id/actionCl"
                    android:layout_marginBottom="34dp"
                    android:clipChildren="false"
                    android:layout_height="wrap_content">


                <ImageView
                        android:id="@+id/btnChat"
                        android:src="@drawable/icon_flash"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvLeftChatTime"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                <TextView
                        android:id="@+id/tvLeftChatTime"
                        android:elevation="2dp"
                        android:textColor="@color/colorOrange"
                        android:background="@drawable/shape_rectangle_gray_white_15dp"
                        android:layout_width="20dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="3"
                        android:layout_height="20dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>


    </LinearLayout>
</com.kennyc.view.MultiStateView>
