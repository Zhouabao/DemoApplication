<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/quickSignTv"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="夏天的西瓜很甜，但甜不过我"
        android:textColor="#ff333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorDivider1"
        app:layout_constraintLeft_toLeftOf="@id/quickSignTv"
        app:layout_constraintRight_toRightOf="@id/quickSignTv"
        app:layout_constraintTop_toBottomOf="@id/quickSignTv" />

</androidx.constraintlayout.widget.ConstraintLayout>