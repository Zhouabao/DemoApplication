<?xml version="1.0" encoding="utf-8"?>
<com.kennyc.view.MultiStateView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/stateview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msv_animateViewChanges="true"
        app:msv_errorView="@layout/error_layout"
        app:msv_loadingView="@layout/loading_layout"
        app:msv_viewState="loading">

        <FrameLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/refreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    app:srlDisableContentWhenLoading="true"
                    app:srlDisableContentWhenRefresh="true"
                    app:srlEnableLoadMoreWhenContentNotFull="false"
                    tools:context=".ui.fragment.SquareFragment">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/squareDynamicRv"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <FrameLayout
                    android:id="@+id/uploadFl"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">


                <ProgressBar
                        android:id="@+id/uploadProgressBar"
                        style="@style/uploadProgress"
                        android:max="100"
                        android:progress="100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/uploadProgressTv"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ffffffff"
                        android:textSize="12sp"
                        android:text="正在发布"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </FrameLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/squareEdit"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="end|bottom"
                    android:backgroundTint="@color/colorOrange"
                    android:src="@drawable/icon_edit"
                    android:layout_marginBottom="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_anchorGravity="bottom|right|end"/>

        </FrameLayout>


</com.kennyc.view.MultiStateView>
