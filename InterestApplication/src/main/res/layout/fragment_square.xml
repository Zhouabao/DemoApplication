<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorTransparent"
            android:gravity="center_vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rgSquareCl"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <RadioGroup
                    android:id="@+id/rgSquare"
                    android:background="@drawable/shape_rectangle_lightgray_8dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="32dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                        android:id="@+id/tabSquare"
                        android:background="@drawable/selector_index_7dp"
                        android:button="@null"
                        android:paddingRight="9dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="9dp"
                        android:layout_margin="2dp"
                        android:layout_width="74dp"
                        android:checked="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="标签广场"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/selector_color_index_tab"
                        android:layout_height="match_parent"/>

                <RadioButton
                        android:id="@+id/tabFriendsSqaure"
                        android:paddingRight="9dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="9dp"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="好友"
                        android:checked="false"
                        android:textColor="@color/selector_color_index_tab"
                        android:background="@drawable/selector_index_7dp"
                        android:button="@null"
                        android:layout_margin="2dp"
                        android:layout_width="74dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

            </RadioGroup>


            <ImageView
                    android:id="@+id/filterGenderBtn"
                    android:paddingRight="15dp"
                    android:scaleType="center"
                    android:layout_width="wrap_content"
                    android:paddingLeft="15dp"
                    android:src="@drawable/icon_square_filter_gender"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/rgSquare"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/rgSquare"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/squareTagRv"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rgSquareCl"/>

        <View
                android:background="@drawable/icon_shadow_white_down"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintTop_toBottomOf="@id/squareTagRv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/refreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    app:srlDisableContentWhenLoading="true"
                    app:srlDisableContentWhenRefresh="true"
                    app:srlEnableLoadMoreWhenContentNotFull="false"
                    tools:context=".ui.fragment.SquareFragment">

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/squareDynamicRv"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <FrameLayout
                    android:id="@+id/uploadFl"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">


                <ProgressBar
                        android:id="@+id/uploadProgressBar"
                        style="@style/uploadProgress"
                        android:max="100"
                        android:progress="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/uploadProgressTv"
                            android:layout_marginLeft="15dp"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            android:text="正在发布"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:id="@+id/llRetry"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/uploadProgressTv"
                            android:orientation="horizontal"
                            android:background="@drawable/shape_rectangle_gray_white_10dp"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="6dp"
                            android:layout_marginLeft="5dp"
                            android:paddingRight="6dp"
                            android:paddingTop="1dp"
                            android:visibility="gone"
                            android:paddingBottom="1dp"
                            android:layout_height="15dp">

                        <ImageView
                                android:id="@+id/iconRetry"
                                android:src="@drawable/icon_edit_retry"
                                android:layout_width="10dp"
                                android:layout_marginRight="4dp"
                                android:layout_height="10dp"/>

                        <TextView
                                android:id="@+id/editRetry"
                                android:layout_width="20dp"
                                android:layout_height="14dp"
                                android:text="编辑"
                                android:textColor="#ff919191"
                                android:textSize="10sp"
                                />
                    </LinearLayout>

                    <ImageView
                            android:id="@+id/btnClose"
                            android:visibility="gone"
                            android:layout_marginRight="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/icon_close_publish"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                    android:id="@+id/squareEdit"
                    android:layout_marginBottom="40dp"
                    android:layout_gravity="end|bottom|right"
                    android:background="@drawable/icon_publish_bakcground"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_height="80dp">

                <ImageView
                        android:src="@drawable/icon_edit"
                        android:scaleType="center"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        />

            </LinearLayout>

        </FrameLayout>

        <include
                android:id="@+id/loadingLayout"
                layout="@layout/loading_layout"
                android:visibility="visible"/>

        <include
                android:id="@+id/errorLayout"
                layout="@layout/error_layout"
                android:visibility="gone"/>

        <include
                android:id="@+id/emptyLayout"
                layout="@layout/empty_layout"
                android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>
