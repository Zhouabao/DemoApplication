<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.AllTitleActivity">

    <include layout="@layout/layout_actionbar"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llTitle"
            >

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/titleClassRv"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>

        <com.kennyc.view.MultiStateView
                android:id="@+id/stateTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:msv_emptyView="@layout/empty_layout"
                app:msv_errorView="@layout/error_layout"
                app:msv_loadingView="@layout/loading_layout"
                app:msv_viewState="loading">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/refreshTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srlDisableContentWhenLoading="true"
                    app:srlDisableContentWhenRefresh="true"
                    app:srlEnableLoadMore="true"
                    app:srlEnableRefresh="true">

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/titlesRv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>


        </com.kennyc.view.MultiStateView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>