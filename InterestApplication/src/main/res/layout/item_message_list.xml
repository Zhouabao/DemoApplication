<?xml version="1.0" encoding="utf-8"?>
<com.sdy.jitangapplication.widgets.swipemenu.EasySwipeMenuLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:canRightSwipe="false"
        app:contentView="@id/content"
        app:fraction="0.1"
        app:rightMenuView="@id/right">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/msgIcon"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="15dp"
                app:civ_border_color="@color/colorDivider"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <View
                android:id="@+id/msgOnLineState"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/shape_rectangle_green_vip"
                app:layout_constraintLeft_toLeftOf="@id/msgIcon"
                app:layout_constraintTop_toTopOf="@id/msgIcon"/>

        <TextView
                android:id="@+id/msgTitle"
                android:layout_marginLeft="7dp"
                android:text="发现"
                android:textColor="#ff222222"
                android:textSize="16sp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/msgIcon"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/msgTag"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:text="招呼"
                android:textColor="@color/colorOrange"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_rectangle_lightorange_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/msgTitle"
                app:layout_constraintLeft_toRightOf="@id/msgTitle"
                app:layout_constraintTop_toTopOf="@id/msgTitle"/>

        <TextView
                android:id="@+id/latelyTime"
                android:text="2分钟前"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/msgTitle"/>

        <TextView
                android:id="@+id/text"
                android:layout_marginTop="6dp"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="有XX个人对你感兴趣，快来看看吧"
                android:textColor="#ff999999"
                android:textSize="14sp"
                android:layout_marginRight="30dp"
                app:layout_constraintLeft_toLeftOf="@id/msgTitle"
                app:layout_constraintRight_toLeftOf="@id/newCount"
                app:layout_constraintTop_toBottomOf="@id/msgTitle"
                />

        <TextView
                android:id="@+id/newCount"
                android:text="2"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:textStyle="bold"
                android:background="@drawable/orange_bg_rectangle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/text"/>


        <View
                android:id="@+id/msgDivider"
                android:layout_marginTop="15dp"
                android:background="@color/colorDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/msgTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:id="@+id/right"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/menuTop"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:scaleType="centerInside"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_top_msg"
                />

        <ImageView
                android:id="@+id/menuDetele"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:scaleType="centerInside"
                android:layout_height="50dp"
                android:src="@drawable/icon_delete_msg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                />
    </LinearLayout>
</com.sdy.jitangapplication.widgets.swipemenu.EasySwipeMenuLayout>
