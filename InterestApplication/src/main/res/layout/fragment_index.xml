<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

    <View
            android:id="@+id/customStatusBar"
            android:visibility="visible"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/findToTalkIv"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_matching_default_black"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/rgIndexTab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/rgIndexTab"/>


    <RadioGroup
            android:id="@+id/rgIndexTab"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rectangle_lightgray_8dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_height="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customStatusBar">

        <RadioButton
                android:id="@+id/tabMatch"
                android:background="@drawable/selector_index_7dp"
                android:button="@null"
                android:paddingRight="9dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="9dp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:checked="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="标签匹配"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/selector_color_index_tab"
                android:layout_height="match_parent"/>

        <RadioButton
                android:id="@+id/tabTag"
                android:paddingRight="9dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="9dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="我的标签"
                android:checked="false"
                android:textColor="@color/selector_color_index_tab"
                android:background="@drawable/selector_index_7dp"
                android:button="@null"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

    </RadioGroup>

    <TextView
            android:id="@+id/rightOperationBtn"
            android:textSize="15sp"
            android:textColor="#FF191919"
            android:layout_marginRight="15dp"
            android:background="@drawable/icon_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/rgIndexTab"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/rgIndexTab"/>

    <com.sdy.jitangapplication.widgets.NoScrollViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/vpIndex"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rgIndexTab"
            tools:context=".ui.fragment.IndexFragment"/>
</androidx.constraintlayout.widget.ConstraintLayout>
