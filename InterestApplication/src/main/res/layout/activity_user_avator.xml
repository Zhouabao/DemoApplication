<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ver="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.activity.UserAvatorActivity">


    <ImageView
            android:id="@+id/btnBack"
            style="@style/BckBtnStyle"
            android:layout_marginLeft="25dp"
            android:visibility="gone"
            />

    <TextView
            android:id="@+id/help"
            android:text="帮助"
            android:textColor="#ffb2b2b2"
            android:textSize="15sp"
            android:gravity="right"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:padding="20dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    <TextView
            android:id="@+id/tv1"

            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="头像"
            android:textColor="#ff262626"
            android:textSize="27sp"
            android:textStyle="bold"
            />

    <TextView
            android:id="@+id/userAvatorTitle"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack4C"
            android:textSize="17sp"
            android:layout_marginTop="9dp"
            android:text="挑一张照片来昭告天下你的盛世美颜吧"
            />

    <ImageView
            android:id="@+id/userAvatorTake"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/circle_gray_bg"
            android:scaleType="centerInside"
            android:src="@drawable/icon_camera_white"
            android:layout_width="164dp"
            android:layout_height="164dp"/>


    <RelativeLayout
            android:id="@+id/avatorNotifyLl"
            android:visibility="invisible"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
                android:background="@drawable/icon_rectangle_with_shadow"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/icon_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            <TextView
                    android:id="@+id/avatorNotify"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="9dp"
                    android:textColor="@color/colorOrange"
                    android:text="果然盛世美颜，就它吧"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <ImageView
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:src="@drawable/icon_triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/btnNextStep"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_confirm_btn1"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="下一步"
            android:textColor="#ffffffff"
            android:enabled="false"
            android:textSize="17sp"
            android:textStyle="bold"
            />
</LinearLayout>