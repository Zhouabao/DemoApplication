<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ver="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:paddingLeft="25dp"
        tools:context=".ui.activity.UserAvatorActivity">


    <ImageView
            android:id="@+id/btnBack"
            style="@style/BckBtnStyle"
            android:visibility="gone"
            />

    <TextView
            android:id="@+id/help"
            android:text="帮助"
            android:textColor="#ffb2b2b2"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:padding="20dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    <TextView
            android:id="@+id/tv1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="头像"
            android:textColor="#ff262626"
            android:textSize="27sp"
            android:textStyle="bold"
            />

    <TextView
            android:id="@+id/userAvatorNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack4C"
            android:textSize="17sp"
            android:layout_marginTop="9dp"
            android:text="挑一张照片来昭告天下你的盛世美颜吧"
            />

    <ImageView
            android:id="@+id/userAvatorTake"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/circle_gray_bg"
            android:scaleType="centerInside"
            android:src="@drawable/icon_camera_white"
            android:layout_width="164dp"
            android:layout_height="164dp"/>

    <LinearLayout
            android:background="@drawable/icon_arrow_avator_up"
            android:layout_marginRight="49dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginRight="9dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_logo"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        <TextView
                android:id="@+id/avatorNotify"
                android:textColor="@color/colorOrange"
                android:text="果然盛世美颜，就它吧"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
            android:id="@+id/btnNextStep"
            android:layout_width="match_parent"
            android:layout_marginRight="25dp"
            android:layout_height="83dp"
            android:layout_marginTop="112dp"
            android:background="@drawable/selector_confirm_btn"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffffff"
            android:enabled="false"
            android:textSize="17sp"
            android:textStyle="bold"
            />
</LinearLayout>