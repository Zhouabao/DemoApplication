<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">


    <TextView
        android:id="@+id/recordMoney"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="提出 500.00 元"
        android:textColor="#ff191919"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recordStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recordId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="聊天消耗"
        android:textColor="#ff888d92"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/recordMoney"
        app:layout_constraintRight_toLeftOf="@id/recordTime"
        app:layout_constraintTop_toBottomOf="@id/recordMoney" />

    <TextView
        android:id="@+id/recordStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="审核中"
        android:textColor="#ff191919"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/recordMoney"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/recordMoney" />

    <TextView
        android:id="@+id/recordTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-02-28 13:06"
        android:textColor="#ff888d92"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@+id/recordStatus"
        app:layout_constraintTop_toTopOf="@id/recordId" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorDivider"
        app:layout_constraintLeft_toLeftOf="@id/recordMoney"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recordTime" />
</androidx.constraintlayout.widget.ConstraintLayout>