<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context=".ui.activity.SquareCommentDetailActivity">

    <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/btnBack"
                style="@style/BckBtnStyle"
                />

        <TextView
                android:text="动态详情"
                android:layout_toRightOf="@id/btnBack"
                android:textColor="@color/colorBlackTitle"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                />

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/colorLightGray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
    </RelativeLayout>

    <com.kennyc.view.MultiStateView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/stateview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:msv_errorView="@layout/error_layout"
            app:msv_loadingView="@layout/loading_layout"
            app:msv_viewState="c">

        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/refreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/showCommentLl"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srlEnableAutoLoadMore="true"
                    app:srlEnableLoadMore="true"
                    app:srlEnableLoadMoreWhenContentNotFull="false"
                    app:srlEnableRefresh="true">


                <androidx.core.widget.NestedScrollView
                        android:id="@+id/squareScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/squareUserIv"
                                android:layout_marginLeft="15dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="20dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                                android:id="@+id/detailPlayUserVipIv"
                                android:layout_marginLeft="42dp"
                                android:src="@drawable/icon_vip"
                                android:visibility="gone"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/squareUserIv"/>

                        <TextView
                                android:id="@+id/detailPlayUserName"
                                android:layout_marginLeft="10dp"
                                android:layout_width="115dp"
                                android:layout_height="22dp"
                                android:textColor="@color/colorBlack22"
                                android:textSize="16sp"
                                app:layout_constraintLeft_toRightOf="@id/squareUserIv"
                                app:layout_constraintTop_toTopOf="@id/squareUserIv"
                                tools:text="Kimberly Davis"
                                />

                        <TextView
                                android:id="@+id/detailPlayUserLocationAndTime"
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:textColor="@color/colorBlack99"
                                android:layout_marginTop="4dp"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="@id/detailPlayUserName"
                                app:layout_constraintTop_toBottomOf="@id/detailPlayUserName"
                                tools:text="北京市 10小时前"
                                />

                        <TextView
                                android:id="@+id/btnChat"
                                android:textColor="#ffff6318"
                                android:textSize="14sp"
                                android:paddingLeft="35dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingRight="15dp"
                                android:background="@drawable/shape_rectangle_gray_white_15dp"
                                android:layout_marginRight="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="聊天"
                                app:layout_constraintBottom_toBottomOf="@id/detailPlayUserLocationAndTime"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/squareUserIv"/>

                        <ImageView
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/icon_flash_small"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:layout_constraintBottom_toBottomOf="@id/btnChat"
                                app:layout_constraintLeft_toLeftOf="@id/btnChat"
                                app:layout_constraintTop_toTopOf="@id/btnChat"/>

                        <com.sdy.jitangapplication.switchplay.SwitchVideo
                                android:id="@+id/squareUserVideo"
                                android:layout_marginTop="10dp"
                                android:layout_width="0dp"
                                android:layout_height="252dp"
                                android:layout_marginBottom="10dp"
                                android:visibility="gone"
                                app:layout_constraintBottom_toTopOf="@id/squareContent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/detailPlayUserLocationAndTime"/>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/squareUserPics"
                                android:nestedScrollingEnabled="false"
                                android:clickable="true"
                                android:visibility="gone"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toTopOf="@id/squareContent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/detailPlayUserLocationAndTime"
                                />

                        <include
                                layout="@layout/layout_record_audio"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="275dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="12dp"
                                app:layout_constraintBottom_toTopOf="@id/squareContent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/detailPlayUserLocationAndTime"/>


                        <com.ctetin.expandabletextviewlibrary.ExpandableTextView
                                android:id="@+id/squareContent"
                                android:layout_marginTop="10dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/colorBlack22"
                                android:textSize="16sp"
                                android:lineSpacingMultiplier="1.3"
                                android:ellipsize="end"
                                app:ep_contract_color="@color/colorGrayText"
                                app:ep_contract_text="收起"
                                app:ep_expand_color="@color/colorGrayText"
                                app:ep_expand_text="...展开"
                                app:ep_max_line="5"
                                app:ep_need_always_showright="true"
                                app:ep_need_animation="true"
                                app:ep_need_contract="true"
                                app:ep_need_expand="true"
                                app:layout_constraintBottom_toTopOf="@id/squareDianzanlL"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/squareUserIv"
                                tools:text="从 2015 年 4 月起，Ant Design 在蚂蚁金服中后台产品线迅速推广，对接多条业务线，覆盖系统 800 个以上。定位于中台业务的 Ant Design 兼顾专业和非专业的设计人员，具有学习成本低、上手速度快、实现效果好等特点，并且提供从界面设计到前端开发的全链路…展开以大大提升设计和开发的效率。"
                                />

                        <LinearLayout
                                android:id="@+id/squareDianzanlL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:layout_constraintStart_toStartOf="@id/squareUserIv"
                                app:layout_constraintTop_toBottomOf="@id/squareContent">

                            <ImageView
                                    android:id="@+id/squareDianzanBtnImg"
                                    android:src="@drawable/icon_dianzan"
                                    android:layout_width="25dp"
                                    android:layout_height="22dp"
                                    />


                            <TextView
                                    android:id="@+id/squareDianzanBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack22"
                                    android:textSize="14sp"
                                    android:layout_marginStart="8dp"
                                    app:layout_constraintBottom_toBottomOf="@id/squareDianzanBtnImg"
                                    app:layout_constraintLeft_toRightOf="@id/squareDianzanBtnImg"
                                    app:layout_constraintTop_toTopOf="@id/squareDianzanBtnImg"
                                    tools:text="123"/>

                        </LinearLayout>


                        <LinearLayout
                                android:id="@+id/squareCommentlL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                app:layout_constraintBottom_toBottomOf="@id/squareDianzanlL"
                                app:layout_constraintStart_toEndOf="@id/squareDianzanlL"
                                app:layout_constraintTop_toTopOf="@id/squareDianzanlL">

                            <ImageView
                                    android:src="@drawable/icon_comment"
                                    android:layout_width="23dp"
                                    android:layout_height="21dp"/>

                            <TextView
                                    android:id="@+id/squareCommentBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/colorBlack22"
                                    android:textSize="14sp"
                                    tools:text="123"/>
                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/squareZhuanfaLl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                app:layout_constraintStart_toEndOf="@id/squareCommentlL"
                                app:layout_constraintTop_toTopOf="@id/squareDianzanlL">

                            <ImageView
                                    android:src="@drawable/icon_zhuanfa"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"/>

                            <TextView
                                    android:id="@+id/squareZhuanfaBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorBlack22"
                                    android:textSize="14sp"
                                    tools:text="123"/>
                        </LinearLayout>


                        <TextView
                                android:id="@+id/squareMoreBtn"
                                android:drawableLeft="@drawable/icon_more_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorBlack22"
                                android:textSize="14sp"
                                app:layout_constraintRight_toRightOf="@id/squareContent"
                                app:layout_constraintTop_toTopOf="@id/squareDianzanlL"/>


                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/commentList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="60dp"
                                android:layout_marginTop="20dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/squareDianzanlL"
                                />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.core.widget.NestedScrollView>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <LinearLayout
                    android:id="@+id/showCommentLl"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_rectangle_gray_white_0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                <EditText
                        android:id="@+id/showCommentEt"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:hint="有什么感受说来听听"
                        android:background="@null"
                        android:textSize="14sp"
                        android:maxLength="150"
                        android:textColorHint="@color/colorBlackC9"
                        android:textColor="@color/colorBlackTitle"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        />

                <Button
                        android:id="@+id/sendCommentBtn"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_send_unable"
                        android:layout_width="30dp"
                        android:enabled="false"
                        android:layout_marginRight="12dp"
                        android:layout_height="30dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.kennyc.view.MultiStateView>
</LinearLayout>

