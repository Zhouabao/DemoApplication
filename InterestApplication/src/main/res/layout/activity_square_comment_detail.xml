<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context=".ui.activity.SquareCommentDetailActivity">

    <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/btnBack"
                style="@style/BckBtnStyle"
                />

        <TextView
                android:text="动态详情"
                android:layout_toRightOf="@id/btnBack"
                android:textColor="@color/colorBlackTitle"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                />

        <View
                android:layout_alignParentBottom="true"
                android:background="@color/colorLightGray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
    </RelativeLayout>

    <com.kennyc.view.MultiStateView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/stateview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:msv_errorView="@layout/error_layout"
            app:msv_loadingView="@layout/loading_layout"
            app:msv_viewState="loading">

        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/refreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/showCommentLl"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srlEnableAutoLoadMore="true"
                    app:srlEnableLoadMore="true"
                    app:srlEnableLoadMoreWhenContentNotFull="false"
                    app:srlEnableRefresh="true">


                <androidx.core.widget.NestedScrollView
                        android:id="@+id/squareScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <include
                                android:id="@+id/topLayout"
                                layout="@layout/layout_square_list_top"
                                android:layout_marginTop="20dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>


                        <com.sdy.jitangapplication.switchplay.SwitchVideo
                                android:id="@+id/squareUserVideo"
                                android:layout_marginTop="15dp"
                                android:layout_width="0dp"
                                android:layout_height="252dp"
                                android:visibility="gone"
                                app:layout_constraintBottom_toTopOf="@id/bottomLayout"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/topLayout"/>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/squareUserPics"
                                android:nestedScrollingEnabled="false"
                                android:clickable="true"
                                android:visibility="gone"
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toTopOf="@id/bottomLayout"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/topLayout"
                                />

                        <include
                                layout="@layout/layout_record_audio"
                                android:layout_height="50dp"
                                android:layout_marginTop="15dp"
                                android:layout_width="275dp"
                                android:layout_marginLeft="12dp"
                                app:layout_constraintBottom_toTopOf="@id/bottomLayout"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/topLayout"/>

                        <include
                                android:id="@+id/bottomLayout"
                                layout="@layout/layout_square_list_bottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                app:layout_constraintBottom_toTopOf="@id/commentList"
                                app:layout_constraintLeft_toLeftOf="parent"
                                />

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/commentList"
                                android:overScrollMode="never"
                                android:scrollbars="none"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="60dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.core.widget.NestedScrollView>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <LinearLayout
                    android:id="@+id/showCommentLl"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_rectangle_gray_white_0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                <EditText
                        android:id="@+id/showCommentEt"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:hint="有什么感受说来听听"
                        android:background="@null"
                        android:textSize="14sp"
                        android:maxLength="150"
                        android:textColorHint="@color/colorBlackC9"
                        android:textColor="@color/colorBlackTitle"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        />

                <Button
                        android:id="@+id/sendCommentBtn"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_send_unable"
                        android:layout_width="30dp"
                        android:enabled="false"
                        android:layout_marginRight="12dp"
                        android:layout_height="30dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.kennyc.view.MultiStateView>
</LinearLayout>

